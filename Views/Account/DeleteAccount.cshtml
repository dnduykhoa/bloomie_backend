@model Bloomie.Models.ViewModels.DeleteAccountViewModel
@{
    ViewData["Title"] = "Xóa tài khoản";
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
}

<div class="profile-wrapper">
    <div class="profile-card">
        <div class="profile-header text-center">
            <h2 class="profile-title">Xóa tài khoản</h2>
            <p class="profile-subtitle">Xác nhận để xóa tài khoản của bạn</p>
            
            @if (TempData["success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["success"]
                    <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["error"]
                    <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        </div>
        <div class="profile-content">
            <div class="alert alert-warning mb-4">
                <i class="fas fa-exclamation-triangle mr-2"></i>
                <strong>Lưu ý:</strong> Tài khoản của bạn sẽ bị ẩn khỏi hệ thống. Bạn có thể yêu cầu khôi phục lại sau này.
            </div>

            <form asp-action="DeleteAccount" method="post" id="deleteAccountForm">
                <div class="form-group mb-4">
                    <label class="label">Lý do xóa tài khoản</label>
                    <div class="reason-options">
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="Reason" value="Không còn nhu cầu sử dụng" id="reason1" required />
                            <label class="form-check-label" for="reason1">Không còn nhu cầu sử dụng</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="Reason" value="Không hài lòng với dịch vụ" id="reason2" />
                            <label class="form-check-label" for="reason2">Không hài lòng với dịch vụ</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="Reason" value="Đã có tài khoản khác" id="reason3" />
                            <label class="form-check-label" for="reason3">Đã có tài khoản khác</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="Reason" value="Khác" id="reasonOther" />
                            <label class="form-check-label" for="reasonOther">Khác</label>
                        </div>
                        <div id="otherReasonDiv" class="mt-3 d-none">
                            <input type="text" class="form-control" id="otherReasonInput" placeholder="Nhập lý do khác..." />
                        </div>
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-4 position-relative">
                    <label asp-for="Password" class="label">Mật khẩu xác nhận</label>
                    <input asp-for="Password" class="form-control password-input" type="password" required />
                    <span class="toggle-password" onclick="togglePassword('Password', 'togglePassword')">
                        <i id="togglePassword" class="fas fa-eye-slash"></i>
                    </span>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="profile-actions text-center">
                    <a asp-action="Profile" class="btn btn-secondary btn-lg">Hủy</a>
                    <button type="button" class="btn btn-danger btn-lg" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">Xác nhận xóa tài khoản</button>
                </div>

                <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="confirmDeleteModalLabel">Xác nhận xóa tài khoản</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Bạn có chắc chắn muốn xóa tài khoản? Hành động này không thể hoàn tác ngay lập tức.
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                <button type="submit" class="btn btn-danger" form="deleteAccountForm">Xóa tài khoản</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* General Styling */
    body {
        margin: 0;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(rgba(255, 250, 250, 0.8), rgba(255, 182, 193, 0.3)), url('https://images.unsplash.com/photo-1519378058457-4c29a0a2efac?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80') no-repeat center center fixed;
        background-size: cover;
    }

    .profile-wrapper {
        max-width: 1100px;
        margin: 15px;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        width: 95%;
    }

    .profile-card {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        padding: 20px;
        transition: transform 0.3s ease;
    }

    .profile-card:hover {
        transform: translateY(-3px);
    }

    .profile-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .profile-title {
        font-size: 30px;
        color: #D0021B;
        font-weight: 700;
        position: relative;
        display: inline-block;
        padding-bottom: 8px;
    }

    .profile-title::after {
        content: '';
        width: 40px;
        height: 3px;
        background: #D0021B;
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
    }

    .profile-subtitle {
        font-size: 16px;
        color: #666;
        margin-top: 6px;
    }

    /* Form Styling */
    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .label {
        font-weight: 600;
        color: #34495e;
        font-size: 16px;
        display: block;
        margin-bottom: 8px;
    }

    .form-control {
        width: 100%;
        padding: 10px 15px;
        font-size: 16px;
        border-radius: 8px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        box-sizing: border-box;
    }

    .password-input {
        padding-right: 40px; /* Chừa chỗ cho con mắt */
    }

    .form-control:focus {
        border-color: #D0021B;
        box-shadow: 0 0 5px rgba(208, 2, 27, 0.3);
        outline: none;
    }

    .text-danger {
        font-size: 14px;
        margin-top: 5px;
        display: block;
    }

    /* Radio Buttons */
    .reason-options {
        display: flex;
        flex-direction: column;
        gap: 12px;
        padding: 12px;
        background: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.02);
    }

    .form-check {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-check-input {
        width: 18px;
        height: 18px;
        cursor: pointer;
    }

    .form-check-label {
        font-size: 15px;
        color: #2c3e50;
        cursor: pointer;
    }

    /* Password Toggle */
    .toggle-password {
        position: absolute;
        right: 15px;
        top: 70%;
        transform: translateY(-50%);
        display: flex;
        align-items: center;
        cursor: pointer;
        color: #666;
        font-size: 16px;
        height: 100%;
        padding: 0 5px;
    }

    .toggle-password:hover {
        color: #D0021B;
    }

    /* Profile Actions */
    .profile-actions {
        display: flex;
        justify-content: center;
        gap: 10px;
        flex-wrap: wrap;
        margin-top: 20px;
    }

    .profile-actions .btn {
        padding: 10px 25px;
        font-size: 16px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .profile-actions .btn-danger {
        background-color: #e74c3c;
        border: none;
        box-shadow: 0 3px 8px rgba(231, 76, 60, 0.2);
    }

    .profile-actions .btn-danger:hover {
        background-color: #c0392b;
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(192, 57, 43, 0.4);
    }

    .profile-actions .btn-secondary {
        background-color: #6c757d;
        border: none;
        box-shadow: 0 3px 8px rgba(108, 117, 125, 0.2);
    }

    .profile-actions .btn-secondary:hover {
        background-color: #5a6268;
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(90, 98, 104, 0.4);
    }

    /* Alert Styling */
    .alert {
        padding: 10px 15px;
        margin-bottom: 20px;
        border-radius: 8px;
        font-size: 16px;
        position: relative;
        animation: fadeIn 0.5s ease-in-out;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .alert-warning {
        background-color: #fff3cd;
        color: #856404;
        border: 1px solid #ffeeba;
    }

    .alert-dismissible .close {
        position: absolute;
        top: 0;
        right: 0;
        padding: 10px 15px;
        color: inherit;
        background: transparent;
        border: none;
        font-size: 20px;
        cursor: pointer;
    }

    /* Modal Styling */
    .modal-content {
        background: #fff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        animation: fadeIn 0.3s ease;
    }

    .modal-title {
        font-size: 20px;
        color: #D0021B;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .modal-body {
        font-size: 16px;
        color: #2c3e50;
        margin-bottom: 15px;
    }

    .modal-footer {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .modal-footer .btn {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .modal-footer .btn-danger {
        background-color: #e74c3c;
        border: none;
        box-shadow: 0 3px 8px rgba(231, 76, 60, 0.2);
    }

    .modal-footer .btn-danger:hover {
        background-color: #c0392b;
        transform: translateY(-2px);
    }

    .modal-footer .btn-secondary {
        background-color: #6c757d;
        border: none;
        box-shadow: 0 3px 8px rgba(108, 117, 125, 0.2);
    }

    .modal-footer .btn-secondary:hover {
        background-color: #5a6268;
        transform: translateY(-2px);
    }

    /* Animations */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(15px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .profile-wrapper {
            margin: 10px;
            padding: 15px;
        }

        .profile-actions .btn {
            width: 100%;
            margin-bottom: 10px;
        }

        .reason-options {
            padding: 10px;
        }

        .form-check {
            flex-direction: column;
            align-items: flex-start;
            gap: 6px;
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        // Hàm chuyển đổi hiển thị/ẩn mật khẩu
        function togglePassword(inputId, iconId) {
            const passwordInput = document.getElementById(inputId);
            const toggleIcon = document.getElementById(iconId);

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                toggleIcon.classList.remove("fa-eye-slash");
                toggleIcon.classList.add("fa-eye");
            } else {
                passwordInput.type = "password";
                toggleIcon.classList.remove("fa-eye");
                toggleIcon.classList.add("fa-eye-slash");
            }
        }

        // Hiện ô nhập khi chọn "Khác"
        document.querySelectorAll('input[name="Reason"]').forEach(function(radio) {
            radio.addEventListener('change', function() {
                const otherReasonDiv = document.getElementById('otherReasonDiv');
                const otherReasonInput = document.getElementById('otherReasonInput');
                if (this.value === 'Khác') {
                    otherReasonDiv.classList.remove('d-none');
                    otherReasonInput.setAttribute('name', 'Reason');
                    otherReasonInput.required = true;
                } else {
                    otherReasonDiv.classList.add('d-none');
                    otherReasonInput.removeAttribute('name');
                    otherReasonInput.required = false;
                    otherReasonInput.value = '';
                }
            });
        });
    </script>
}