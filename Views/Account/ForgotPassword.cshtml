@using Bloomie.Data
@model ApplicationUser
@{
    ViewData["Title"] = "Quên mật khẩu - Bloomie";
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Lora', serif;
        margin: 0;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(rgba(255, 250, 250, 0.8), rgba(255, 182, 193, 0.3)), url('https://images.unsplash.com/photo-1519378058457-4c29a0a2efac?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80') no-repeat center center fixed;
        background-size: cover;
    }

    .forgot-password-container {
        max-width: 900px;
        width: 100%;
        margin: 20px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        display: flex;
    }

    .intro-section {
        flex: 1;
        background: linear-gradient(135deg, rgba(0, 0, 0, 0.4), rgba(255, 182, 193, 0.3)), url('https://images.unsplash.com/photo-1519378058457-4c29a0a2efac?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80') no-repeat center center;
        background-size: cover;
        padding: 30px;
        color: #ffe6e6;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .intro-section h2 {
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 15px;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
        }

        .intro-section p {
            font-size: 1rem;
            opacity: 0.9;
        }

    .forgot-password-section {
        flex: 1;
        padding: 30px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .forgot-password-section h2 {
            font-size: 1.8rem;
            font-weight: 600;
            color: #ff6666;
            margin-bottom: 20px;
            text-align: center;
        }

    .form-control {
        border-radius: 10px;
        border: 1px solid #e0e0e0;
        padding: 10px;
        font-size: 0.9rem;
        background: #fffafa;
        transition: border-color 0.3s ease;
        font-family: 'Lora', serif;
    }

        .form-control:focus {
            border-color: #ffb6c1;
            box-shadow: none;
            background: white;
        }

    .form-label {
        color: #cc7a7a;
        font-size: 0.9rem;
        font-family: 'Lora', serif;
    }

    .btn-primary {
        background-color: #ff6666;
        border: none;
        border-radius: 25px;
        padding: 10px;
        font-size: 0.95rem;
        font-weight: 600;
        font-family: 'Lora', serif;
        color: #fff0f0;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #ff4d4d;
            color: #fff0f0;
        }

    .text-links a {
        color: #ffb6c1;
        font-size: 0.85rem;
        text-decoration: none;
        font-family: 'Lora', serif;
        margin: 0 10px;
    }

        .text-links a:hover {
            color: #ff4d4d;
        }
</style>

<section id="form">
    <div class="forgot-password-container">
        <!-- Introduction Section -->
        <div class="intro-section">
            <h2>Khôi phục mật khẩu</h2>
            <p>Nhập email của bạn để nhận hướng dẫn đặt lại mật khẩu và tiếp tục trải nghiệm cùng Bloomie.</p>
        </div>

        <!-- Forgot Password Form Section -->
        <div class="forgot-password-section">
            <h2>Quên mật khẩu</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <form asp-action="SendMailForgotPass" asp-controller="Account" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" placeholder="Nhập email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Gửi</button>
            </form>
            <div class="text-links text-center mt-3">
                <a asp-action="Login" asp-controller="Account">Quay lại đăng nhập</a> |
                <a asp-action="Register" asp-controller="Account">Tạo tài khoản mới</a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


