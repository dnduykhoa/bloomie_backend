@section Scripts {
    <!-- 1. THƯ VIỆN CDN (load trước) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/vi.js"></script>

    <!-- 2. TOÀN BỘ JS TRONG 1 THẺ DUY NHẤT -->
    <script>

        document.addEventListener('DOMContentLoaded', function () {
            // ===============================
            // 0. RECENTLY VIEWED PRODUCTS & WISHLIST
            // ===============================
            
            // Save current product to recently viewed
            const currentProductId = @Model.Id;
            const currentProduct = {
                id: currentProductId,
                name: '@Html.Raw(Model.Name)',
                price: @Model.Price,
                imageUrl: '@(Model.ImageUrl ?? (Model.Images?.FirstOrDefault()?.Url ?? ""))',
                timestamp: new Date().getTime()
            };
            
            @if (User.Identity.IsAuthenticated)
            {
                // For authenticated users: save to database via API
                <text>
                // Save to database
                fetch('/api/ProductApi/recently-viewed', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({ productId: currentProductId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        console.log('Recently viewed saved to database');
                    }
                })
                .catch(error => console.error('Error saving recently viewed:', error));
                
                // Load from database
                fetch('/api/ProductApi/recently-viewed', {
                    method: 'GET',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.data.length > 0) {
                        // Filter out current product and take up to 8
                        const recentlyViewedToShow = data.data.filter(p => p.id !== currentProductId).slice(0, 8);
                        if (recentlyViewedToShow.length > 0) {
                            displayRecentlyViewed(recentlyViewedToShow);
                        }
                    }
                })
                .catch(error => console.error('Error loading recently viewed:', error));
                </text>
            }
            else
            {
                // For non-authenticated users: use localStorage
                <text>
                let recentlyViewed = JSON.parse(localStorage.getItem('recentlyViewed') || '[]');
                
                // Remove current product if exists
                recentlyViewed = recentlyViewed.filter(p => p.id !== currentProductId);
                
                // Add to beginning
                recentlyViewed.unshift(currentProduct);
                
                // Keep only 8 most recent
                recentlyViewed = recentlyViewed.slice(0, 8);
                
                // Save back to localStorage
                localStorage.setItem('recentlyViewed', JSON.stringify(recentlyViewed));
                
                // Display recently viewed (excluding current product) - show up to 8 for carousel
                const recentlyViewedToShow = recentlyViewed.filter(p => p.id !== currentProductId).slice(0, 8);
                if (recentlyViewedToShow.length > 0) {
                    displayRecentlyViewed(recentlyViewedToShow);
                }
                </text>
            }
            
            // Common function to display recently viewed products
            function displayRecentlyViewed(products) {
                document.getElementById('recentlyViewedSection').style.display = 'block';
                const container = document.getElementById('recentlyViewedProducts');
                
                // For authenticated users, products already have discount info
                @if (User.Identity.IsAuthenticated)
                {
                    <text>
                    container.innerHTML = products.map(p => {
                        const ratingStars = generateRatingStars(p.averageRating || 0);
                        
                        // Hiển thị giá có khuyến mãi
                        let priceHtml = '';
                        if (p.hasDiscount && p.discountValue > 0) {
                            let badgeText = '';
                            if (p.discountType === 'percent') {
                                badgeText = `-${p.discountValue}%`;
                            } else if (p.discountType === 'fixed_amount') {
                                badgeText = `-${p.discountValue.toLocaleString('vi-VN')}đ`;
                            }
                            
                            priceHtml = `
                                <div class="similar-product-price mb-2">
                                    <div class="d-flex justify-content-center align-items-center gap-2 mb-1">
                                        <span class="discount-badge small">${badgeText}</span>
                                    </div>
                                    <div class="price-amount text-danger fw-bold mb-1">${p.discountedPrice.toLocaleString('vi-VN')} đ</div>
                                    <div class="text-muted small"><del>${p.price.toLocaleString('vi-VN')} đ</del></div>
                                </div>
                            `;
                        } else {
                            priceHtml = `<div class="similar-product-price mb-2"><span class="price-amount">${p.price.toLocaleString('vi-VN')} đ</span></div>`;
                        }
                        
                        return `
                            <div class="col">
                                <div class="card similar-product-card h-100 border-0">
                                    <div class="similar-product-image-wrapper">
                                        <a href="/Product/Details/${p.id}">
                                            <img src="${p.imageUrl}" class="similar-product-img" alt="${p.name}">
                                            <div class="similar-product-overlay">
                                                <i class="bi bi-eye-fill"></i>
                                                <span>Xem chi tiết</span>
                                            </div>
                                        </a>
                                    </div>
                                    <div class="card-body text-center py-4 px-3">
                                        <h6 class="similar-product-title mb-3">
                                            <a href="/Product/Details/${p.id}" class="text-decoration-none">${p.name}</a>
                                        </h6>
                                        ${priceHtml}
                                        <div class="similar-product-stats d-flex justify-content-between align-items-center">
                                            <div class="rating-stars">${(p.averageRating || 0) > 0 ? `${ratingStars}<span class="rating-count ms-1">${(p.averageRating || 0).toFixed(1)} (${p.totalReviews || 0})</span>` : '<span class="text-muted">Chưa có đánh giá</span>'}
                                            </div>
                                            <div class="sold-count text-muted">
                                                <span>${p.totalSold || 0} đã bán</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `;
                    }).join('');
                    </text>
                }
                else
                {
                    <text>
                    // For anonymous users, fetch additional product info
                    const productIds = products.map(p => p.id);
                    fetch(`/Product/GetProductsInfo?${productIds.map(id => 'productIds=' + id).join('&')}`)
                        .then(response => response.json())
                        .then(productsInfo => {
                            container.innerHTML = products.map(p => {
                                const info = productsInfo.find(i => i.id === p.id) || { averageRating: 0, totalReviews: 0, totalSold: 0, finalPrice: p.price, discountType: '', discountValue: 0 };
                                const ratingStars = generateRatingStars(info.averageRating);
                                
                                // Hiển thị giá có khuyến mãi
                                let priceHtml = '';
                                if (info.discountType && info.discountValue > 0) {
                                    let badgeText = '';
                                    if (info.discountType === 'percent') {
                                        badgeText = `-${info.discountValue}%`;
                                    } else if (info.discountType === 'fixed_amount') {
                                        badgeText = `-${info.discountValue.toLocaleString('vi-VN')}đ`;
                                    }
                                    
                                    priceHtml = `
                                        <div class="similar-product-price mb-2">
                                            <div class="d-flex justify-content-center align-items-center gap-2 mb-1">
                                                <span class="discount-badge small">${badgeText}</span>
                                            </div>
                                            <div class="price-amount text-danger fw-bold mb-1">${info.finalPrice.toLocaleString('vi-VN')} đ</div>
                                            <div class="text-muted small"><del>${p.price.toLocaleString('vi-VN')} đ</del></div>
                                        </div>
                                    `;
                                } else {
                                    priceHtml = `<div class="similar-product-price mb-2"><span class="price-amount">${p.price.toLocaleString('vi-VN')} đ</span></div>`;
                                }
                                
                                return `
                                    <div class="col">
                                        <div class="card similar-product-card h-100 border-0">
                                            <div class="similar-product-image-wrapper">
                                                <a href="/Product/Details/${p.id}">
                                                    <img src="${p.imageUrl}" class="similar-product-img" alt="${p.name}">
                                                    <div class="similar-product-overlay">
                                                        <i class="bi bi-eye-fill"></i>
                                                        <span>Xem chi tiết</span>
                                                    </div>
                                                </a>
                                            </div>
                                            <div class="card-body text-center py-4 px-3">
                                                <h6 class="similar-product-title mb-3">
                                                    <a href="/Product/Details/${p.id}" class="text-decoration-none">${p.name}</a>
                                                </h6>
                                                ${priceHtml}
                                                <div class="similar-product-stats d-flex justify-content-between align-items-center">
                                                    <div class="rating-stars">${info.averageRating > 0 ? `${ratingStars}<span class="rating-count ms-1">${info.averageRating.toFixed(1)} (${info.totalReviews})</span>` : '<span class="text-muted">Chưa có đánh giá</span>'}
                                                    </div>
                                                    <div class="sold-count text-muted">
                                                        <span>${info.totalSold} đã bán</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                `;
                            }).join('');
                        })
                        .catch(error => {
                            console.error('Error fetching products info:', error);
                            // Fallback to basic display without rating/sold
                            container.innerHTML = products.map(p => `
                                <div class="col">
                                    <div class="card similar-product-card h-100 border-0">
                                        <div class="similar-product-image-wrapper">
                                            <a href="/Product/Details/${p.id}">
                                                <img src="${p.imageUrl}" class="similar-product-img" alt="${p.name}">
                                                <div class="similar-product-overlay">
                                                    <i class="bi bi-eye-fill"></i>
                                                    <span>Xem chi tiết</span>
                                                </div>
                                            </a>
                                        </div>
                                        <div class="card-body text-center py-4 px-3">
                                            <h6 class="similar-product-title mb-3">
                                                <a href="/Product/Details/${p.id}" class="text-decoration-none">${p.name}</a>
                                            </h6>
                                            <div class="similar-product-price">
                                                <span class="price-amount">${p.price.toLocaleString('vi-VN')} đ</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            `).join('');
                        });
                    </text>
                }
            }

            
            // Helper function to generate rating stars
            function generateRatingStars(rating) {
                let stars = '';
                for (let i = 1; i <= 5; i++) {
                    if (i <= rating) {
                        stars += '<i class="bi bi-star-fill text-warning"></i>';
                    } else if (i - rating < 1) {
                        stars += '<i class="bi bi-star-half text-warning"></i>';
                    } else {
                        stars += '<i class="bi bi-star text-warning"></i>';
                    }
                }
                return stars;
            }
            
            // Add to cart from recently viewed
            window.addToCartFromRecent = function(productId) {
                fetch(`/ShoppingCart/AddToCart?productId=${productId}`, {
                    method: 'GET',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Update cart count
                        const cartCountElement = document.querySelector('#cartCount');
                        if (cartCountElement && data.cartCount !== undefined) {
                            cartCountElement.textContent = data.cartCount;
                        }
                        // Show notification
                        alert(data.message || 'Đã thêm sản phẩm vào giỏ hàng!');
                    } else {
                        alert(data.message || 'Có lỗi xảy ra khi thêm sản phẩm vào giỏ hàng!');
                    }
                })
                .catch(error => {
                    console.error('Error adding to cart:', error);
                    alert('Có lỗi xảy ra khi thêm sản phẩm vào giỏ hàng!');
                });
            }
            
            // Load wishlist status
            @if (User.Identity.IsAuthenticated)
            {
                <text>
                fetch(`/WishList/GetWishListStatus?productIds=${currentProductId}`)
                    .then(response => response.json())
                    .then(wishListProductIds => {
                        if (wishListProductIds.includes(currentProductId)) {
                            const btn = document.getElementById('wishlistBtn-' + currentProductId);
                            if (btn) {
                                btn.classList.add('active');
                                btn.querySelector('i').classList.remove('bi-heart');
                                btn.querySelector('i').classList.add('bi-heart-fill');
                            }
                        }
                    })
                    .catch(error => console.error('Error loading wishlist status:', error));
                </text>
            }

            // ===============================
            // 1. LIGHTBOX CHO ẢNH SẢN PHẨM (chỉ sản phẩm)
            // ===============================
            const productImageModal = document.getElementById('productImageModal');
            const productImageModalImg = document.getElementById('productImageModalImg');
            const productImageModalClose = document.getElementById('productImageModalClose');
            const productImageModalPrev = document.getElementById('productImageModalPrev');
            const productImageModalNext = document.getElementById('productImageModalNext');
            const productImageModalThumbnails = document.getElementById('productImageModalThumbnails');

            let productImages = [];
            let productImageIndex = 0;

            // Lấy đúng các ảnh trong carousel sản phẩm (chỉ lấy img trực tiếp trong .carousel-inner > .carousel-item > img)
            const carouselImgs = Array.from(document.querySelectorAll('#productCarousel .carousel-inner .carousel-item > img.carousel-img'));
            productImages = carouselImgs.map(img => ({ src: img.getAttribute('src'), alt: img.getAttribute('alt') || '' }));

            // Click ảnh sản phẩm để mở modal
            carouselImgs.forEach((img, idx) => {
                img.style.cursor = 'zoom-in';
                img.addEventListener('click', e => {
                    e.preventDefault();
                    openProductImageModal(idx);
                });
            });

            function openProductImageModal(idx) {
                productImageIndex = idx;
                productImageModalImg.src = productImages[productImageIndex].src;
                productImageModalImg.alt = productImages[productImageIndex].alt;
                productImageModal.classList.add('active');
                updateProductImageNav();
                renderProductImageThumbnails();
            }

            function updateProductImageNav() {
                const hasMultiple = productImages.length > 1;
                productImageModalPrev.style.display = hasMultiple && productImageIndex > 0 ? 'flex' : 'none';
                productImageModalNext.style.display = hasMultiple && productImageIndex < productImages.length - 1 ? 'flex' : 'none';
            }

            function renderProductImageThumbnails() {
                if (productImages.length <= 1) {
                    productImageModalThumbnails.style.display = 'none';
                    productImageModalThumbnails.innerHTML = '';
                    return;
                }
                productImageModalThumbnails.style.display = 'flex';
                productImageModalThumbnails.innerHTML = '';
                productImages.forEach((img, i) => {
                    const thumb = document.createElement('img');
                    thumb.src = img.src;
                    thumb.alt = img.alt;
                    thumb.className = 'image-modal-thumb';
                    Object.assign(thumb.style, {
                        width: '60px', height: '60px', objectFit: 'cover',
                        borderRadius: '6px', cursor: 'pointer', margin: '0 4px',
                        border: i === productImageIndex ? '2px solid #FF7043' : '1px solid #ccc',
                        opacity: i === productImageIndex ? '1' : '0.7'
                    });
                    thumb.addEventListener('click', () => {
                        productImageIndex = i;
                        productImageModalImg.src = productImages[i].src;
                        updateProductImageNav();
                        renderProductImageThumbnails();
                    });
                    productImageModalThumbnails.appendChild(thumb);
                });
            }

            productImageModalPrev.onclick = e => {
                e.stopPropagation();
                if (productImageIndex > 0) {
                    productImageIndex--;
                    productImageModalImg.src = productImages[productImageIndex].src;
                    updateProductImageNav();
                    renderProductImageThumbnails();
                }
            };
            productImageModalNext.onclick = e => {
                e.stopPropagation();
                if (productImageIndex < productImages.length - 1) {
                    productImageIndex++;
                    productImageModalImg.src = productImages[productImageIndex].src;
                    updateProductImageNav();
                    renderProductImageThumbnails();
                }
            };
            function closeProductImageModal() {
                productImageModal.classList.remove('active');
                productImageModalImg.src = '';
                productImageIndex = 0;
                productImageModalThumbnails.innerHTML = '';
            }
            productImageModalClose.onclick = closeProductImageModal;
            productImageModal.onclick = e => { if (e.target === productImageModal) closeProductImageModal(); };
            document.addEventListener('keydown', e => {
                if (!productImageModal.classList.contains('active')) return;
                if (e.key === 'Escape') closeProductImageModal();
                if (e.key === 'ArrowLeft') productImageModalPrev.click();
                if (e.key === 'ArrowRight') productImageModalNext.click();
            });

            // ===============================
            // LIGHTBOX CHO ẢNH ĐÁNH GIÁ/REPLY
            // ===============================
            const imageModal = document.getElementById('imageModal');
            const imageModalImg = document.getElementById('imageModalImg');
            const imageModalClose = document.getElementById('imageModalClose');
            const imageModalPrev = document.getElementById('imageModalPrev');
            const imageModalNext = document.getElementById('imageModalNext');

            let reviewImages = [];
            let reviewImageIndex = 0;

            // Bắt sự kiện click vào ảnh đánh giá
            document.querySelectorAll('.rating-images').forEach(function(container) {
                const imgs = Array.from(container.querySelectorAll('.rating-image-thumbnail'));
                imgs.forEach((img, idx) => {
                    img.style.cursor = 'zoom-in';
                    img.addEventListener('click', function(e) {
                        e.preventDefault();
                        // Lấy danh sách ảnh từ data-images
                        const allImages = img.getAttribute('data-images');
                        reviewImages = allImages ? allImages.split(',') : [img.getAttribute('src')];
                        reviewImageIndex = parseInt(img.getAttribute('data-index')) || 0;
                        openReviewImageModal();
                    });
                });
            });
            // Bắt sự kiện click vào ảnh trả lời
            document.querySelectorAll('.reply-images').forEach(function(container) {
                const imgs = Array.from(container.querySelectorAll('.reply-image-thumbnail'));
                imgs.forEach((img, idx) => {
                    img.style.cursor = 'zoom-in';
                    img.addEventListener('click', function(e) {
                        e.preventDefault();
                        const allImages = img.getAttribute('data-images');
                        reviewImages = allImages ? allImages.split(',') : [img.getAttribute('src')];
                        reviewImageIndex = parseInt(img.getAttribute('data-index')) || 0;
                        openReviewImageModal();
                    });
                });
            });

            function openReviewImageModal() {
                imageModalImg.src = reviewImages[reviewImageIndex];
                imageModal.classList.add('active');
                updateReviewImageNav();
            }
            function updateReviewImageNav() {
                const hasMultiple = reviewImages.length > 1;
                imageModalPrev.style.display = hasMultiple && reviewImageIndex > 0 ? 'flex' : 'none';
                imageModalNext.style.display = hasMultiple && reviewImageIndex < reviewImages.length - 1 ? 'flex' : 'none';
            }
            imageModalPrev.onclick = e => {
                e.stopPropagation();
                if (reviewImageIndex > 0) {
                    reviewImageIndex--;
                    imageModalImg.src = reviewImages[reviewImageIndex];
                    updateReviewImageNav();
                }
            };
            imageModalNext.onclick = e => {
                e.stopPropagation();
                if (reviewImageIndex < reviewImages.length - 1) {
                    reviewImageIndex++;
                    imageModalImg.src = reviewImages[reviewImageIndex];
                    updateReviewImageNav();
                }
            };
            function closeReviewImageModal() {
                imageModal.classList.remove('active');
                imageModalImg.src = '';
                reviewImageIndex = 0;
                reviewImages = [];
            }
            imageModalClose.onclick = closeReviewImageModal;
            imageModal.onclick = e => { if (e.target === imageModal) closeReviewImageModal(); };
            document.addEventListener('keydown', e => {
                if (!imageModal.classList.contains('active')) return;
                if (e.key === 'Escape') closeReviewImageModal();
                if (e.key === 'ArrowLeft') imageModalPrev.click();
                if (e.key === 'ArrowRight') imageModalNext.click();
            });

            // ==================================================================
            // 2. CAROUSEL + THUMBNAILS
            // ==================================================================
            const carouselEl = document.querySelector('#productCarousel');
            const carouselItems = document.querySelectorAll('.carousel-item');
            const prevBtn = document.querySelector('.carousel-control-prev');
            const nextBtn = document.querySelector('.carousel-control-next');
            const thumbnails = document.querySelectorAll('.thumbnail-img');

            const carousel = new bootstrap.Carousel(carouselEl, { interval: 3000, ride: 'carousel', pause: 'hover', wrap: true });

            if (carouselItems.length <= 1) {
                if (prevBtn) prevBtn.style.display = 'none';
                if (nextBtn) nextBtn.style.display = 'none';
            }

            thumbnails.forEach((t, i) => t.addEventListener('click', () => carousel.to(i)));
            carouselEl.addEventListener('slid.bs.carousel', e => {
                thumbnails.forEach(t => t.classList.remove('active'));
                if (thumbnails[e.to]) thumbnails[e.to].classList.add('active');
            });

            setTimeout(() => {
                const active = document.querySelector('.carousel-item.active');
                if (active && thumbnails.length) {
                    const idx = Array.from(carouselItems).indexOf(active);
                    thumbnails.forEach(t => t.classList.remove('active'));
                    if (thumbnails[idx]) thumbnails[idx].classList.add('active');
                }
            }, 100);

            // ==================================================================
            // 3. SỐ LƯỢNG + POPUP
            // ==================================================================
            const qtyInput = document.getElementById('quantity');
            qtyInput.addEventListener('input', function () {
                let v = parseInt(this.value) || 1;
                if (v < 1) v = 1;
                this.value = v;
                updateButtonQuantities(v);
            });

            const popup = document.getElementById('addToCartPopup');
            document.getElementById('continueShoppingPopupBtn')?.addEventListener('click', () => popup.style.display = 'none');
            document.getElementById('closePopupBtn')?.addEventListener('click', () => popup.style.display = 'none');

            // ==================================================================
            // 4. REPLY / REPORT / DELETE / LIKE
            // ==================================================================
            document.querySelectorAll('.reply-btn').forEach(b => b.onclick = function () {
                const id = this.dataset.ratingId;
                const reply = document.getElementById(`reply-form-${id}`);
                const report = document.getElementById(`report-form-${id}`);
                reply.style.display = reply.style.display === 'none' ? 'block' : 'none';
                if (report) report.style.display = 'none';
            });

            document.querySelectorAll('.report-btn').forEach(b => b.onclick = function () {
                const id = this.dataset.ratingId;
                const report = document.getElementById(`report-form-${id}`);
                const reply = document.getElementById(`reply-form-${id}`);
                if (!this.disabled) report.style.display = report.style.display === 'none' ? 'block' : 'none';
                if (reply) reply.style.display = 'none';
            });

            document.querySelectorAll('.cancel-reply, .cancel-report').forEach(b => b.onclick = function () {
                const id = this.dataset.ratingId;
                document.getElementById(this.classList.contains('cancel-reply') ? `reply-form-${id}` : `report-form-${id}`).style.display = 'none';
            });

            // Delete rating/reply
            document.querySelectorAll('.delete-rating').forEach(b => b.onclick = function () {
                const id = this.dataset.ratingId;
                if (confirm('Xóa đánh giá này?')) {
                    fetch(`/Product/DeleteRating?ratingId=${id}`, {
