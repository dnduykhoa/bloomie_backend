@using Microsoft.AspNetCore.Http
@model Bloomie.Models.Entities.Product
@{
    ViewData["Title"] = $"{Model.Name} - Bloomie";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ratings = ViewBag.Ratings as List<Bloomie.Models.Entities.Rating>;
    var averageRating = ViewBag.AverageRating != null ? (double)ViewBag.AverageRating : 0;
    var parentCategory = ViewBag.ParentCategory as Bloomie.Models.Entities.Category;
    var subCategory = ViewBag.SubCategory as Bloomie.Models.Entities.Category;
    var similarProducts = ViewBag.SimilarProducts as List<Bloomie.Models.Entities.Product>;
    var currentUserId = User?.Claims?.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

    // Tính phân bố đánh giá
    var totalRatings = ratings?.Count ?? 0;
    var ratingDistribution = new Dictionary<int, int>
    {
        { 5, ratings?.Count(r => r.Star == 5) ?? 0 },
        { 4, ratings?.Count(r => r.Star == 4) ?? 0 },
        { 3, ratings?.Count(r => r.Star == 3) ?? 0 },
        { 2, ratings?.Count(r => r.Star == 2) ?? 0 },
        { 1, ratings?.Count(r => r.Star == 1) ?? 0 }
    };
}

<!-- ========================================= -->
<!-- MAIN CONTENT CONTAINER -->
<!-- ========================================= -->
<div class="container mt-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-transparent py-2">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">
                    <i class="bi bi-house-door-fill"></i> Trang chủ
                </a>
            </li>
            @{
                var specialParent = ViewBag.SpecialFilterParent as string;
                var specialChild = ViewBag.SpecialFilterChild as string;
                var parentCat = ViewBag.ParentCategory as Bloomie.Models.Entities.Category;
                var subCat = ViewBag.SubCategory as Bloomie.Models.Entities.Category;

                if (!string.IsNullOrEmpty(specialParent))
                {
                    <li class="breadcrumb-item">
                        <span>&gt;</span>
                    </li>
                    <li class="breadcrumb-item">@specialParent</li>
                    if (!string.IsNullOrEmpty(specialChild))
                    {
                        <li class="breadcrumb-item">
                            <span>&gt;</span>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">@specialChild</li>
                    }
                    else
                    {
                        <li class="breadcrumb-item">
                            <span>&gt;</span>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">@specialParent</li>
                    }
                }
                else if (parentCat != null && subCat != null)
                {
                    <li class="breadcrumb-item">
                        <span>&gt;</span>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Product", new { categoryId = parentCat.Id })">@parentCat.Name</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span>&gt;</span>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Product", new { categoryId = subCat.Id })">@subCat.Name</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span>&gt;</span>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                }
                else if (subCat != null)
                {
                    <li class="breadcrumb-item">
                        <span>&gt;</span>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Product", new { categoryId = subCat.Id })">@subCat.Name</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span>&gt;</span>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                }
                else
                {
                    <li class="breadcrumb-item">
                        <span>&gt;</span>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                }
            }
        </ol>
    </nav>

    <!-- Khu vực chi tiết sản phẩm -->
    <div class="row g-4">
        <!-- Bên trái: Ảnh & mô tả sản phẩm -->
        <div class="col-md-6">
            <!-- Carousel ảnh sản phẩm -->
            <div class="card product-image">
                @{
                    var imagesList = new List<string>();
                    if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        imagesList.Add(Model.ImageUrl);
                    }
                    if (Model.Images != null && Model.Images.Any())
                    {
                        foreach (var img in Model.Images)
                        {
                            if (string.IsNullOrEmpty(Model.ImageUrl) || img.Url != Model.ImageUrl)
                            {
                                imagesList.Add(img.Url);
                            }
                        }
                    }
                }
                <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @if (imagesList.Count > 0)
                        {
                            for (int i = 0; i < imagesList.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@imagesList[i]" class="carousel-img" alt="Product Image">
                                </div>
                            }
                        }
                        else
                        {
                            <div class="carousel-item active">
                                <img src="/images/placeholder.jpg" class="carousel-img" alt="No Image">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                    @if (imagesList.Count > 0)
                    {
                        <div class="carousel-thumbnails mt-1 mb-1 d-flex justify-content-center gap-2">
                            @for (int i = 0; i < imagesList.Count; i++)
                            {
                                <img src="@imagesList[i]" class="thumbnail-img rounded" data-bs-target="#productCarousel" data-bs-slide-to="@i" alt="Thumbnail">
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Mô tả sản phẩm -->
            <div class="product-description p-3 bg-light border rounded-3 mt-4">
                <h5 class="fw-bold text-dark mb-3">
                    <i class="bi bi-info-circle me-2"></i> Mô tả sản phẩm
                </h5>
                <div class="description-content">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        var decodedDescription = System.Net.WebUtility.HtmlDecode(Model.Description);
                        @Html.Raw(decodedDescription)
                        <p class="text-muted fst-italic mt-3 mb-2">
                            * Do mỗi sản phẩm đều được làm thủ công & màu hoa có thể thay đổi theo mùa hoa trong năm nên sẽ có chút khác biệt so với hình ảnh.
                        </p>
                    }
                    else
                    {
                        <p class="mb-2">Không có mô tả chi tiết.</p>
                        <p class="text-muted fst-italic mb-2">
                            * Do mỗi sản phẩm đều được làm thủ công & màu hoa có thể thay đổi theo mùa hoa trong năm nên sẽ có chút khác biệt so với hình ảnh.
                        </p>
                    }
                </div>
            </div>
        </div>

        <!-- Bên phải: Thông tin & thao tác sản phẩm -->
        <div class="col-md-6">
            <div class="card product-details h-100 p-4">
                <!-- Wishlist & Share buttons -->
                <div class="product-actions-top d-flex justify-content-end gap-2 mb-3">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <button class="btn btn-wishlist" onclick="toggleWishlist(@Model.Id)" id="wishlistBtn-@Model.Id" title="Thêm vào yêu thích">
                            <i class="bi bi-heart"></i>
                        </button>
                    }
                    <button class="btn btn-share" onclick="toggleShareMenu()" title="Chia sẻ">
                        <i class="bi bi-share"></i>
                    </button>
                    <!-- Share menu dropdown -->
                    <div class="share-menu" id="shareMenu">
                        <button onclick="shareToFacebook()" class="share-item">
                            <i class="bi bi-facebook"></i> Facebook
                        </button>
                        <button onclick="shareToTwitter()" class="share-item">
                            <i class="bi bi-twitter"></i> Twitter
                        </button>
                        <button onclick="copyLink()" class="share-item">
                            <i class="bi bi-link-45deg"></i> Copy Link
                        </button>
                    </div>
                </div>

                <h2 class="product-name text-dark fw-bold fs-2 mb-3">@Model.Name</h2>
                <div class="product-price mb-4">
                    @if (ViewBag.ProductDiscount != null)
                    {
                        var discountInfo = ViewBag.ProductDiscount;
                        decimal discountedPrice = Model.Price - discountInfo.discountAmount;
                        <div class="d-flex align-items-center gap-3 mb-1">
                            <span class="text-danger fw-bold fs-3">@String.Format("{0:#,##0}", discountedPrice) đ</span>
                            @if (discountInfo.discountType == "percent")
                            {
                                <span class="discount-badge">-@discountInfo.discountValue%</span>
                            }
                            else if (discountInfo.discountType == "fixed_amount")
                            {
                                <span class="discount-badge">-@discountInfo.discountValue.ToString("#,##0")đ</span>
                            }
                        </div>
                        <div class="text-muted small"><del>@String.Format("{0:#,##0}", Model.Price) đ</del></div>
                    }
                    else
                    {
                        <span class="text-danger fw-bold fs-3">@String.Format("{0:#,##0}", Model.Price) đ</span>
                    }
                </div>

                <!-- Chọn số lượng -->
                <div class="quantity-selector mb-4">
                    <div class="d-flex align-items-center" style="gap: 12px;">
                        <label for="quantity" class="fw-bold mb-0">Số lượng:</label>
                        <div class="input-group mb-0" style="width: 140px;">
                            <button type="button" class="btn btn-outline-secondary btn-quantity" onclick="updateQuantity(-1)">-</button>
                            <input type="number" id="quantity" name="quantity" value="1" class="form-control text-center quantity-input" min="1">
                            <button type="button" class="btn btn-outline-secondary btn-quantity" onclick="updateQuantity(1)">+</button>
                        </div>
                    </div>
                </div>

                <!-- Chọn ngày giao hàng -->
                <div class="delivery-date-selector mb-4">
                    <label class="fw-bold mb-2">Chọn ngày giao hàng:</label>
                    <div class="delivery-date-options d-flex gap-2 flex-wrap">
                        @{
                            var today = DateTime.Now;
                            var tomorrow = today.AddDays(1);
                            var dayAfterTomorrow = today.AddDays(2);
                            var daysOfWeek = new[] { "CHỦ NHẬT", "THỨ HAI", "THỨ BA", "THỨ TƯ", "THỨ NĂM", "THỨ SÁU", "THỨ BẢY" };
                        }
                        <button type="button" class="btn btn-outline-secondary delivery-date-btn active" data-date="@today.ToString("yyyy-MM-dd")">
                            @today.ToString("dd") THÁNG @today.ToString("MM")<br>HÔM NAY
                        </button>
                        <button type="button" class="btn btn-outline-secondary delivery-date-btn" data-date="@tomorrow.ToString("yyyy-MM-dd")">
                            @tomorrow.ToString("dd") THÁNG @tomorrow.ToString("MM")<br>NGÀY MAI
                        </button>
                        <button type="button" class="btn btn-outline-secondary delivery-date-btn" data-date="@dayAfterTomorrow.ToString("yyyy-MM-dd")">
                            @dayAfterTomorrow.ToString("dd") THÁNG @dayAfterTomorrow.ToString("MM")<br>@daysOfWeek[(int)dayAfterTomorrow.DayOfWeek]
                        </button>
                        <button type="button" class="btn btn-outline-secondary delivery-date-calendar" id="calendarBtn" data-date="">
                            <i class="bi bi-calendar3" id="calendarBtnIcon"></i>
                            <span id="calendarBtnText">Lịch</span>
                        </button>
                        <input type="hidden" id="calendarInput" value="@today.ToString("yyyy-MM-dd")">
                    </div>
                    <span id="selectedDeliveryDate" class="mt-2 d-block fw-bold"></span>
                </div>

                <!-- Chọn thời gian giao hàng -->
                <div class="delivery-time-selector mb-4">
                    <label class="fw-bold mb-2">Chọn thời gian giao hàng:</label>
                    <div class="delivery-time-options d-flex gap-2 flex-wrap">
                        <button type="button" class="btn btn-outline-secondary delivery-time-btn" data-time="08:00-10:00">8h - 10h</button>
                        <button type="button" class="btn btn-outline-secondary delivery-time-btn" data-time="09:00-11:00">9h - 11h</button>
                        <button type="button" class="btn btn-outline-secondary delivery-time-btn" data-time="10:00-12:00">10h - 12h</button>
                        <button type="button" class="btn btn-outline-secondary delivery-time-btn" data-time="11:00-13:00">11h - 13h</button>
                        <button type="button" class="btn btn-outline-secondary delivery-time-btn" data-time="12:00-14:00">12h - 14h</button>
                        <button type="button" class="btn btn-outline-secondary delivery-time-btn" data-time="13:00-15:00">13h - 15h</button>
                        <button type="button" class="btn btn-outline-secondary delivery-time-btn" data-time="14:00-16:00">14h - 16h</button>
                        <button type="button" class="btn btn-outline-secondary delivery-time-btn" data-time="15:00-17:00">15h - 17h</button>
                        <button type="button" class="btn btn-outline-secondary delivery-time-btn" data-time="16:00-18:00">16h - 18h</button>
                        <button type="button" class="btn btn-outline-secondary delivery-time-btn" data-time="17:00-19:00">17h - 19h</button>
                        <button type="button" class="btn btn-outline-secondary delivery-time-btn" data-time="18:00-20:00">18h - 20h</button>
                        <button type="button" class="btn btn-outline-secondary delivery-time-btn" data-time="19:00-21:00">19h - 21h</button>
                    </div>
                    <span id="selectedDeliveryTime" class="mt-2 d-block fw-bold"></span>
                </div>

                <!-- Nút thao tác mua hàng -->
                <div class="action-buttons mb-4 d-flex gap-3">
                    <a href="#" onclick="addToCart(@Model.Id); return false;" class="btn btn-primary-custom fw-bold w-100 add-to-cart-btn" data-quantity="1">
                        <i class="bi bi-cart-plus me-2"></i> Thêm vào giỏ hàng
                    </a>
                    <a href="#" onclick="buyNow(@Model.Id); return false;" class="btn btn-buy-now fw-bold w-100 buy-now-btn">
                        <i class="bi bi-lightning-fill me-2"></i> Mua ngay
                    </a>
                </div>

                <!-- Thông tin bổ sung -->
                <div class="product-additional-info">
                    <div class="shipping-info text-muted mt-2">
                        <small><i class="bi bi-truck me-1"></i> * Miễn phí vận chuyển cho đơn hàng trên 500.000đ. Thời gian xử lý: 1-2 ngày làm việc.</small>
                    </div>
                    <div class="product-code mt-2">
                        <small><i class="bi bi-instagram me-1"></i> Theo dõi chúng tôi: <a href="#" class="text-primary">Facebook</a> | <a href="#" class="text-primary">Instagram</a></small>
                    </div>
                    <div class="hotline-info mt-2">
                        <small><i class="bi bi-telephone me-1"></i> Hotline hoạt động: 8h-21h hàng ngày.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chính sách và dịch vụ -->
    <div class="card special-offers mt-5 p-4">
        <h5 class="fw-bold text-dark mb-4"><i class="bi bi-shield-check me-2"></i> Chính sách & Dịch vụ</h5>
        <div class="row g-3">
            <div class="col-md-6">
                <div class="policy-item d-flex align-items-start">
                    <i class="bi bi-box-seam text-primary me-3 fs-4"></i>
                    <div>
                        <h6 class="fw-bold mb-1">Miễn phí giao hàng</h6>
                        <p class="text-muted mb-0 small">Áp dụng cho đơn hàng từ 500.000đ trong nội thành</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="policy-item d-flex align-items-start">
                    <i class="bi bi-clock-history text-primary me-3 fs-4"></i>
                    <div>
                        <h6 class="fw-bold mb-1">Giao hàng nhanh</h6>
                        <p class="text-muted mb-0 small">Giao hàng trong 2-4 giờ khu vực nội thành</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="policy-item d-flex align-items-start">
                    <i class="bi bi-arrow-clockwise text-primary me-3 fs-4"></i>
                    <div>
                        <h6 class="fw-bold mb-1">Đổi trả dễ dàng</h6>
                        <p class="text-muted mb-0 small">Hoàn tiền 100% nếu sản phẩm không đạt chất lượng</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="policy-item d-flex align-items-start">
                    <i class="bi bi-flower1 text-primary me-3 fs-4"></i>
                    <div>
                        <h6 class="fw-bold mb-1">Hoa tươi mới</h6>
                        <p class="text-muted mb-0 small">Cam kết hoa tươi, giữ được ít nhất 3-5 ngày</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="policy-item d-flex align-items-start">
                    <i class="bi bi-card-text text-primary me-3 fs-4"></i>
                    <div>
                        <h6 class="fw-bold mb-1">Thiệp miễn phí</h6>
                        <p class="text-muted mb-0 small">Tặng kèm thiệp chúc mừng theo yêu cầu</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="policy-item d-flex align-items-start">
                    <i class="bi bi-headset text-primary me-3 fs-4"></i>
                    <div>
                        <h6 class="fw-bold mb-1">Hỗ trợ 24/7</h6>
                        <p class="text-muted mb-0 small">Tư vấn và chăm sóc khách hàng mọi lúc</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Đánh giá sản phẩm -->
    <div class="card product-reviews mt-5 p-4">
        <h5 class="fw-bold text-dark mb-4"><i class="bi bi-star-fill me-2"></i> Đánh giá sản phẩm</h5>

        <!-- Tổng quan đánh giá -->
        <div class="rating-summary">
            <div class="rating-overview d-flex align-items-center mb-3">
                <div class="rating-score">
                    <span class="rating-value">@averageRating.ToString("F1")</span>
                    <div class="star-rating d-flex gap-1">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= averageRating)
                            {
                                <i class="bi bi-star-fill text-warning"></i>
                            }
                            else if (i - averageRating < 1)
                            {
                                <i class="bi bi-star-half text-warning"></i>
                            }
                            else
                            {
                                <i class="bi bi-star text-warning"></i>
                            }
                        }
                    </div>
                    <span class="rating-out-of">/ 5</span>
                </div>
                <div class="rating-distribution ms-4">
                    @for (int i = 5; i >= 1; i--)
                    {
                        var count = ratingDistribution[i];
                        var percentage = totalRatings > 0 ? (count * 100.0 / totalRatings) : 0;
                        <div class="rating-bar d-flex align-items-center mb-2">
                            <span class="rating-level me-2">@i <i class="bi bi-star-fill text-warning"></i></span>
                            <div class="progress" style="width: 200px; height: 10px;">
                                <div class="progress-bar bg-info" role="progressbar" style="width: @percentage%;" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <span class="rating-percentage ms-2">@percentage.ToString("F0")%</span>
                            <span class="rating-count ms-2">(@count)</span>
                        </div>
                    }
                </div>
            </div>
            <p class="text-muted mb-3">(@totalRatings đánh giá)</p>
        </div>

        <!-- Danh sách đánh giá -->
        @if (ratings != null && ratings.Any())
        {
            var visibleRatings = ratings.Where(r => r.IsVisible).ToList();
            var reviewCount = visibleRatings.Count;

            <div class="ratings-list mb-4" id="ratings-list" data-review-count="@reviewCount">
                @for (int i = 0; i < visibleRatings.Count; i++)
                {
                    var rating = visibleRatings[i];
                    var isOwnReview = rating.UserId == currentUserId;
                    var isLikedByCurrentUser = rating.UserLikes?.Any(ul => ul.UserId == currentUserId) ?? false;
                    var isPinned = rating.IsPinned; // Kiểm tra đánh giá có được ghim không

                    <div class="rating-item border-bottom py-3 @(isPinned ? "rating-pinned" : "")" id="rating-@rating.Id" data-rating-index="@i" style="@(i > 1 ? "display:none;" : "")">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center gap-2">
                                <img src="@(string.IsNullOrEmpty(rating.User?.ProfileImageUrl) ? "/images/profiles/default-avatar.png" : rating.User.ProfileImageUrl)" class="user-avatar me-2" alt="Avatar" />
                                <strong>@(rating.User?.FullName ?? "Người dùng ẩn danh")</strong>
                                @if (isPinned)
                                {
                                    <span class="badge bg-warning text-dark ms-2" style="font-size: 0.75rem; font-weight: 500;">
                                        <i class="bi bi-star-fill me-1"></i>Đánh giá nổi bật
                                    </span>
                                }
                                <span class="text-muted ms-2">@rating.ReviewDate.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>
                            <div class="star-rating d-flex gap-1">
                                @for (int j = 1; j <= 5; j++)
                                {
                                    if (j <= rating.Star)
                                    {
                                        <i class="bi bi-star-fill text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star text-warning"></i>
                                    }
                                }
                            </div>
                        </div>

                        <p class="mt-2 text-dark rating-comment">@rating.Comment</p>

                        @if (rating.Images != null && rating.Images.Any())
                        {
                            var images = rating.Images.ToList();
                            <div class="rating-images mt-2">
                                @for (int k = 0; k < Math.Min(3, images.Count); k++)
                                {
                                    var allImageUrls = string.Join(",", images.Select(img => img.ImageUrl));
                                    if (k == 2 && images.Count > 3)
                                    {
                                        <div class="rating-image-thumbnail-wrapper position-relative d-inline-block">
                                            <img src="@images[k].ImageUrl" alt="Rating Image" class="rating-image-thumbnail see-more-overlay" data-images="@allImageUrls" data-index="@k" />
                                            <div class="see-more-text-overlay">
                                                <span class="see-more-text">Xem thêm</span>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <img src="@images[k].ImageUrl" alt="Rating Image" class="rating-image-thumbnail" data-images="@allImageUrls" data-index="@k" />
                                    }
                                }
                            </div>
                        }

                        <div class="rating-actions mt-2 d-flex gap-2">
                            <button class="btn btn-sm btn-reply-custom reply-btn" data-rating-id="@rating.Id">
                                <i class="bi bi-reply-fill me-1"></i> Trả lời
                            </button>
                            <button class="btn btn-sm btn-like-custom like-btn @(isLikedByCurrentUser ? "active" : "")"
                                    data-rating-id="@rating.Id" data-likes="@rating.LikesCount" data-is-liked="@(isLikedByCurrentUser ? "true" : "false")">
                                <i class="bi bi-hand-thumbs-up me-1"></i> Hữu ích (<span class="like-count">@rating.LikesCount</span>)
                            </button>
                            @if (User.Identity.IsAuthenticated && !isOwnReview)
                            {
                                var reportedRatingIds = ViewBag.ReportedRatingIds as List<int> ?? new List<int>();
                                var hasReported = reportedRatingIds.Contains(rating.Id);
                                
                                @if (hasReported)
                                {
                                    <button class="btn btn-sm btn-report-custom" disabled title="Bạn đã báo cáo đánh giá này">
                                        <i class="bi bi-flag-fill me-1"></i> Đã báo cáo
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-report-custom report-btn" data-rating-id="@rating.Id">
                                        <i class="bi bi-flag-fill me-1"></i> Báo cáo
                                    </button>
                                }
                            }
                            @if (isOwnReview)
                            {
                                <button class="btn btn-sm btn-delete-custom delete-rating" data-rating-id="@rating.Id" title="Xóa đánh giá">
                                    <i class="bi bi-trash me-1"></i> Xóa
                                </button>
                            }
                        </div>

                        <!-- Reply Form -->
                        <div class="reply-form mt-3 p-3 bg-light rounded" id="reply-form-@rating.Id" style="display: none;">
                            <form asp-action="SubmitReply" method="post" enctype="multipart/form-data">
                                <input type="hidden" name="ratingId" value="@rating.Id" />
                                
                                <div class="mb-3">
                                    <label class="form-label fw-semibold text-primary">
                                        <i class="fas fa-reply me-1"></i>Trả lời đánh giá
                                    </label>
                                    
                                    <div class="input-group">
                                        <span class="input-group-text bg-white">
                                            <i class="fas fa-comment-dots text-muted"></i>
                                        </span>
                                        <textarea class="form-control reply-comment" name="comment" rows="3" 
                                                  placeholder="Nhập câu trả lời của bạn..." required></textarea>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">
                                        <i class="fas fa-images me-1"></i>Ảnh đính kèm (không bắt buộc)
                                    </label>
                                    <input type="file" name="replyImages" multiple accept="image/jpeg,image/png,image/gif" 
                                           class="form-control" />
                                    <small class="text-muted">Tối đa 5 ảnh, định dạng JPG/PNG/GIF</small>
                                </div>

                                <div class="d-flex gap-2 justify-content-end">
                                    <button type="button" class="btn btn-outline-secondary btn-sm cancel-reply" data-rating-id="@rating.Id">
                                        <i class="fas fa-times me-1"></i>Hủy
                                    </button>
                                    <button type="submit" class="btn btn-primary btn-sm">
                                        <i class="fas fa-paper-plane me-1"></i>Gửi trả lời
                                    </button>
                                </div>
                            </form>
                        </div>

                        <!-- Report Form -->
                        <div class="report-form mt-3 p-3 bg-light rounded" id="report-form-@rating.Id" style="display: none;">
                            <form asp-action="SubmitReport" method="post" enctype="multipart/form-data">
                                <input type="hidden" name="ratingId" value="@rating.Id" />
                                
                                <div class="mb-3">
                                    <label class="form-label fw-semibold text-danger">
                                        <i class="fas fa-exclamation-triangle me-1"></i>Lý do báo cáo vi phạm
                                    </label>
                                    
                                    <div class="input-group mb-2">
                                        <span class="input-group-text bg-white">
                                            <i class="fas fa-list-ul text-muted"></i>
                                        </span>
                                        <select class="form-select report-reason-select" id="report-reason-select-@rating.Id" onchange="fillReasonFromDropdown(@rating.Id)">
                                            <option value="">Chọn nhanh lý do phổ biến...</option>
                                            <option value="Spam hoặc quảng cáo">📢 Spam hoặc quảng cáo</option>
                                            <option value="Ngôn từ không phù hợp, thô tục">🚫 Ngôn từ không phù hợp, thô tục</option>
                                            <option value="Nội dung sai sự thật, gây hiểu lầm">⚠️ Nội dung sai sự thật, gây hiểu lầm</option>
                                            <option value="Đánh giá giả mạo, không trung thực">❌ Đánh giá giả mạo, không trung thực</option>
                                            <option value="Vi phạm bản quyền">©️ Vi phạm bản quyền</option>
                                            <option value="Quấy rối hoặc bắt nạt">⛔ Quấy rối hoặc bắt nạt</option>
                                        </select>
                                    </div>
                                    
                                    <div class="input-group">
                                        <span class="input-group-text bg-white">
                                            <i class="fas fa-edit text-muted"></i>
                                        </span>
                                        <textarea class="form-control report-reason" name="reason" rows="3" 
                                                  placeholder="Mô tả chi tiết lý do báo cáo (bắt buộc)..." 
                                                  id="reason-textarea-@rating.Id" required></textarea>
                                    </div>
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle"></i> Chọn từ danh sách hoặc tự nhập lý do cụ thể
                                    </small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">
                                        <i class="fas fa-images me-1"></i>Ảnh minh chứng (không bắt buộc)
                                    </label>
                                    <input type="file" name="replyImages" multiple accept="image/jpeg,image/png,image/gif" 
                                           class="form-control" />
                                    <small class="text-muted">Tối đa 5 ảnh, định dạng JPG/PNG/GIF</small>
                                </div>

                                <div class="d-flex gap-2 justify-content-end">
                                    <button type="button" class="btn btn-outline-secondary btn-sm cancel-report" data-rating-id="@rating.Id">
                                        <i class="fas fa-times me-1"></i>Hủy
                                    </button>
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-paper-plane me-1"></i>Gửi báo cáo
                                    </button>
                                </div>
                            </form>
                        </div>

                        <!-- Replies -->
                        @if (rating.Replies != null && rating.Replies.Any())
                        {
                            var replies = rating.Replies.OrderBy(r => r.ReplyDate).ToList();
                            var replyCount = replies.Count;

                            <div class="replies mt-3 ms-4" data-reply-count="@replyCount">
                                @for (int j = 0; j < replies.Count; j++)
                                {
                                    var reply = replies[j];
                                    var isOwnReply = reply.UserId == currentUserId;
                                    var isReplyLikedByCurrentUser = reply.UserLikes?.Any(ul => ul.UserId == currentUserId) ?? false;

                                    <div class="reply-item border-top pt-2" id="reply-@reply.Id" data-reply-index="@j" style="@(j > 0 ? "display:none;" : "")">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-arrow-return-right reply-icon me-2"></i>
                                                <div class="d-flex align-items-center gap-2">
                                                    @{
                                                        // Kiểm tra xem reply có phải từ Admin/Manager/Staff không
                                                        // RoleId: 1 = Admin, 2 = Manager, 3 = Staff, 4 = Customer
                                                        var isStaffReply = reply.User?.IsSuperAdmin == true || 
                                                                          reply.User?.RoleId == "1" || // Admin
                                                                          reply.User?.RoleId == "2" || // Manager
                                                                          reply.User?.RoleId == "3";   // Staff
                                                        
                                                        var replyAvatarUrl = isStaffReply 
                                                            ? "/images/logos/bloomie_logo.png" 
                                                            : (string.IsNullOrEmpty(reply.User?.ProfileImageUrl) ? "/images/profiles/default-avatar.png" : reply.User.ProfileImageUrl);
                                                        
                                                        var replyBadgeText = reply.User?.IsSuperAdmin == true ? "Admin" : 
                                                                            (reply.User?.RoleId == "1" ? "Admin" : 
                                                                            (reply.User?.RoleId == "2" ? "Quản lý" : 
                                                                            (reply.User?.RoleId == "3" ? "Nhân viên" : "")));
                                                        
                                                        var badgeColor = reply.User?.RoleId == "1" || reply.User?.IsSuperAdmin == true ? "bg-danger" : 
                                                                        (reply.User?.RoleId == "2" ? "bg-primary" : "bg-success");
                                                    }
                                                    <img src="@replyAvatarUrl" class="user-avatar me-2 @(isStaffReply ? "admin-avatar" : "")" alt="Avatar" />
                                                    <strong>
                                                        @if (isStaffReply)
                                                        {
                                                            @:Bloomie Shop
                                                        }
                                                        else
                                                        {
                                                            @(reply.User?.UserName ?? "Người dùng ẩn danh")
                                                        }
                                                    </strong>
                                                    <span class="text-muted ms-2">@reply.ReplyDate.ToString("dd/MM/yyyy HH:mm")</span>
                                                </div>
                                            </div>
                                        </div>
                                        <p class="mt-1 text-dark reply-content">@reply.Comment</p>

                                        @if (reply.Images != null && reply.Images.Any())
                                        {
                                            var replyImages = reply.Images.ToList();
                                            <div class="reply-images mt-2">
                                                @for (int k = 0; k < Math.Min(3, replyImages.Count); k++)
                                                {
                                                    var allReplyImageUrls = string.Join(",", replyImages.Select(img => img.ImageUrl));
                                                    if (k == 2 && replyImages.Count > 3)
                                                    {
                                                        <div class="reply-image-thumbnail-wrapper position-relative d-inline-block">
                                                            <img src="@replyImages[k].ImageUrl" alt="Reply Image" class="reply-image-thumbnail see-more-overlay" data-images="@allReplyImageUrls" data-index="@k" />
                                                            <div class="see-more-text-overlay">
                                                                <span class="see-more-text">Xem thêm</span>
                                                            </div>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <img src="@replyImages[k].ImageUrl" alt="Reply Image" class="reply-image-thumbnail" data-images="@allReplyImageUrls" data-index="@k" />
                                                    }
                                                }
                                            </div>
                                        }

                                        <div class="reply-actions mt-2 d-flex gap-2">
                                            <button class="btn btn-sm btn-like-custom like-btn @(isReplyLikedByCurrentUser ? "active" : "")"
                                                    data-reply-id="@reply.Id" data-likes="@reply.LikesCount" data-is-liked="@(isReplyLikedByCurrentUser ? "true" : "false")">
                                                <i class="bi bi-hand-thumbs-up me-1"></i> Hữu ích (<span class="like-count">@reply.LikesCount</span>)
                                            </button>
                                            @if (isOwnReply)
                                            {
                                                <button class="btn btn-sm btn-delete-custom delete-reply" data-reply-id="@reply.Id" title="Xóa trả lời">
                                                    <i class="bi bi-trash me-1"></i> Xóa
                                                </button>
                                            }
                                        </div>
                                    </div>
                                }

                                @if (replyCount > 1)
                                {
                                    <div class="show-more-replies-wrapper text-center my-2">
                                        <div class="show-more-replies-container d-flex justify-content-center align-items-center">
                                            <!-- Đường line trái -->
                                            <span class="show-more-line"></span>
                                            <!-- Nút Xem thêm -->
                                            <button type="button" class="show-more-replies-btn custom-show-more-replies-btn" data-shown="1" data-total="@replyCount">
                                                <span class="show-more-replies-text">Xem thêm @(replyCount - 1) câu trả lời <i class="bi bi-chevron-down"></i></span>
                                            </button>
                                            <!-- Nút Ẩn (ban đầu ẩn) -->
                                            <button type="button" class="hide-replies-btn" style="display:none;">
                                                <span class="hide-replies-text">Ẩn <i class="bi bi-chevron-up"></i></span>
                                            </button>
                                            <!-- Đường line phải -->
                                            <span class="show-more-line"></span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }

                @if (reviewCount > 2)
                {
                    <div class="show-more-reviews text-center my-2">
                        <button type="button" class="show-more-reviews-btn custom-show-more-ratings-btn" data-shown="2" data-total="@reviewCount">
                            <span class="show-more-reviews-line"></span>
                            <span class="show-more-reviews-text">Xem thêm @((reviewCount - 2)) đánh giá <i class="bi bi-chevron-down"></i></span>
                            <span class="show-more-reviews-line"></span>
                        </button>
                        <button type="button" class="hide-replies-btn btn btn-link" style="display:none;">Ẩn</button>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted mb-4">Chưa có đánh giá nào cho sản phẩm này.</p>
        }

        <!-- Gửi đánh giá -->
        @if (User.Identity.IsAuthenticated)
        {
            <div class="submit-review-toggle mb-3">
                <button type="button" class="btn btn-primary-custom toggle-review-form">
                    <i class="bi bi-star-fill me-2"></i> Gửi đánh giá của bạn
                </button>
                <div class="review-form-container mt-3" style="display: none;">
                    <form asp-action="SubmitRating" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Đánh giá sao:</label>
                            <div class="star-rating-input d-flex gap-2 mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <span class="star" data-value="@i">
                                        <i class="bi bi-star text-warning fs-4"></i>
                                    </span>
                                }
                            </div>
                            <input type="hidden" name="star" id="starRating" value="0" required />
                            <div class="text-danger" id="starError" style="display: none;">Vui lòng chọn số sao.</div>
                        </div>
                        <div class="mb-3">
                            <label for="comment" class="form-label fw-semibold">Bình luận:</label>
                            <textarea class="form-control" id="comment" name="comment" rows="3" placeholder="Nhập bình luận của bạn..." required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="ratingImage" class="form-label fw-semibold">Tải ảnh lên:</label>
                            <input type="file" class="form-control" id="ratingImage" name="ratingImage" accept="image/*" multiple>
                        </div>
                        <button type="submit" class="btn btn-primary-custom">Gửi đánh giá</button>
                        <button type="button" class="btn btn-secondary ms-2 cancel-review-form">Hủy</button>
                    </form>
                </div>
            </div>
        }
        else
        {
            <p class="text-muted">
                Vui lòng <a href="@Url.Action("Login", "Account", new { returnUrl = Url.Action("Display", "Product", new { id = Model.Id }) })" class="text-decoration-none text-primary">đăng nhập</a> để đánh giá sản phẩm.
            </p>
        }
    </div>

    <!-- Sản phẩm tương tự -->
    @if (similarProducts != null && similarProducts.Any())
    {
        <div class="card similar-products mt-5 p-4">
            <h5 class="fw-bold text-dark mb-4"><i class="bi bi-box-seam me-2"></i> Sản phẩm tương tự</h5>
            <div class="carousel-products-container position-relative">
                <button class="carousel-nav-btn carousel-nav-prev" id="similarPrev">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <button class="carousel-nav-btn carousel-nav-next" id="similarNext">
                    <i class="bi bi-chevron-right"></i>
                </button>
                <div class="row row-cols-1 row-cols-md-4 g-4" id="similarProductsContainer">
                @foreach (var similarProduct in similarProducts)
                {
                    <div class="col">
                        <div class="card similar-product-card h-100 border-0">
                            <div class="similar-product-image-wrapper">
                                <a href="@Url.Action("Details", "Product", new { id = similarProduct.Id })">
                                    @{
                                        var imageUrl = !string.IsNullOrEmpty(similarProduct.ImageUrl) 
                                            ? similarProduct.ImageUrl 
                                            : (similarProduct.Images != null && similarProduct.Images.Any() 
                                                ? similarProduct.Images.First().Url 
                                                : null);
                                    }
                                    @if (!string.IsNullOrEmpty(imageUrl))
                                    {
                                        <img src="@imageUrl" class="similar-product-img" alt="@similarProduct.Name">
                                    }
                                    else
                                    {
                                        <div class="similar-product-placeholder">
                                            <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                        </div>
                                    }
                                    <div class="similar-product-overlay">
                                        <i class="bi bi-eye-fill"></i>
                                        <span>Xem chi tiết</span>
                                    </div>
                                </a>
                            </div>
                            <div class="card-body text-center py-4 px-3">
                                <h6 class="similar-product-title mb-3">
                                    <a href="@Url.Action("Details", "Product", new { id = similarProduct.Id })" class="text-decoration-none">@similarProduct.Name</a>
                                </h6>
                                <div class="similar-product-price mb-2">
                                    @{
                                        var similarDiscountPrices = ViewBag.SimilarProductDiscountPrices as Dictionary<int, (decimal discountAmount, string discountType, decimal discountValue)>;
                                        var hasDiscount = similarDiscountPrices != null && similarDiscountPrices.ContainsKey(similarProduct.Id);
                                    }
                                    @if (hasDiscount && similarDiscountPrices != null)
                                    {
                                        var (discountAmount, discountType, discountValue) = similarDiscountPrices[similarProduct.Id];
                                        var discountedPrice = similarProduct.Price - discountAmount;
                                        <div class="d-flex justify-content-center align-items-center gap-2 mb-1">
                                            @if (discountType == "percent")
                                            {
                                                <span class="discount-badge small">-@discountValue%</span>
                                            }
                                            else if (discountType == "fixed_amount")
                                            {
                                                <span class="discount-badge small">-@discountValue.ToString("#,##0")đ</span>
                                            }
                                        </div>
                                        <div class="price-amount text-danger fw-bold mb-1">@String.Format("{0:#,##0}", discountedPrice) đ</div>
                                        <div class="text-muted small"><del>@String.Format("{0:#,##0}", similarProduct.Price) đ</del></div>
                                    }
                                    else
                                    {
                                        <span class="price-amount">@String.Format("{0:#,##0}", similarProduct.Price) đ</span>
                                    }
                                </div>
                                <div class="similar-product-stats d-flex justify-content-between align-items-center">
                                    <div class="rating-stars">
                                        @{
                                            var ratingsDict = ViewBag.RatingsData as Dictionary<int, object>;
                                            var avgRating = 0.0;
                                            var reviewCount = 0;
                                            if (ratingsDict != null && ratingsDict.ContainsKey(similarProduct.Id))
                                            {
                                                dynamic ratingData = ratingsDict[similarProduct.Id];
                                                avgRating = (double)ratingData.AvgRating;
                                                reviewCount = (int)ratingData.Count;
                                            }
                                        }
                                        @if (avgRating > 0)
                                        {
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= avgRating)
                                                {
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                }
                                                else if (i - avgRating < 1)
                                                {
                                                    <i class="bi bi-star-half text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star text-warning"></i>
                                                }
                                            }
                                            <span class="rating-count ms-1">@avgRating.ToString("0.0") (@reviewCount)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa có đánh giá</span>
                                        }
                                    </div>
                                    <div class="sold-count text-muted">
                                        @{
                                            var soldDict = ViewBag.SoldData as Dictionary<int, int>;
                                            var totalSold = 0;
                                            if (soldDict != null && soldDict.ContainsKey(similarProduct.Id))
                                            {
                                                totalSold = soldDict[similarProduct.Id];
                                            }
                                        }
                                        <span>@totalSold đã bán</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                </div>
            </div>
        </div>
    }

    <!-- Sản phẩm đã xem gần đây -->
    <div class="card recently-viewed mt-5 p-4" id="recentlyViewedSection" style="display: none;">
        <h5 class="fw-bold text-dark mb-4"><i class="bi bi-clock-history me-2"></i> Sản phẩm đã xem gần đây</h5>
        <div class="carousel-products-container position-relative">
            <button class="carousel-nav-btn carousel-nav-prev" id="recentPrev">
                <i class="bi bi-chevron-left"></i>
            </button>
            <button class="carousel-nav-btn carousel-nav-next" id="recentNext">
                <i class="bi bi-chevron-right"></i>
            </button>
            <div class="row row-cols-1 row-cols-md-4 g-4" id="recentlyViewedProducts">
                <!-- Products will be loaded by JavaScript -->
            </div>
        </div>
    </div>

    <!-- Popup thêm vào giỏ hàng -->
    <div class="custom-popup" id="addToCartPopup" style="display: none;">
        <div class="custom-popup-content">
            <div class="custom-popup-header d-flex justify-content-between align-items-center border-bottom pb-2">
                <h5 class="custom-popup-title d-flex align-items-center text-success">
                    <i class="bi bi-check-circle me-2"></i> Đã thêm mặt hàng vào giỏ hàng!
                </h5>
                <button type="button" class="custom-popup-close btn-close" id="closePopupBtn" aria-label="Close"></button>
            </div>
            <div class="custom-popup-body py-3">
                <div class="d-flex align-items-center">
                    @{
                        var popupImageUrl = !string.IsNullOrEmpty(Model.ImageUrl) 
                            ? Model.ImageUrl 
                            : (Model.Images != null && Model.Images.Any() ? Model.Images.First().Url : "/images/placeholder.jpg");
                    }
                    <img id="popupProductImage" src="@popupImageUrl" alt="Product Image" style="width: 80px; height: 80px; object-fit: cover; margin-right: 15px;">
                    <div>
                        <p class="mb-1 fw-bold" id="popupProductName">@Model.Name</p>
                        <p class="mb-1">Giá sản phẩm: 
                            <span id="popupProductPrice">
                                @if (ViewBag.ProductDiscount != null)
                                {
                                    var discountInfo = ViewBag.ProductDiscount;
                                    decimal discountedPrice = Model.Price - discountInfo.discountAmount;
                                    <span class="text-danger fw-bold">@String.Format("{0:#,##0}", discountedPrice) đ</span>
                                    <span class="text-muted small ms-1"><del>@String.Format("{0:#,##0}", Model.Price) đ</del></span>
                                }
                                else
                                {
                                    <span>@String.Format("{0:#,##0}", Model.Price) đ</span>
                                }
                            </span>
                        </p>
                        <p class="mb-1">Số lượng: <span id="popupProductQuantity">1</span></p>
                    </div>
                </div>
            </div>
            <div class="custom-popup-footer d-flex justify-content-end gap-2 pt-2">
                <button type="button" class="btn btn-outline-secondary" id="continueShoppingPopupBtn">Tiếp tục mua sắm</button>
                <a href="@Url.Action("Checkout", "Order")" class="btn btn-primary">Tiến hành thanh toán</a>
            </div>
        </div>
