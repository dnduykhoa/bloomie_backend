                const nextBtn = document.getElementById(nextBtnId);
                
                console.log(`Carousel ${containerId}: Found ${items.length} items, itemsPerPage: ${itemsPerPage}`);
                
                // Hide buttons if not enough items (need MORE than itemsPerPage to show navigation)
                if (items.length <= itemsPerPage) {
                    if (prevBtn) prevBtn.style.display = 'none';
                    if (nextBtn) nextBtn.style.display = 'none';
                    console.log(`Not enough items for navigation: ${items.length} items (need more than ${itemsPerPage})`);
                    return;
                }

                // Show navigation buttons
                if (prevBtn) prevBtn.style.display = 'flex';
                if (nextBtn) nextBtn.style.display = 'flex';
                console.log('Navigation buttons shown');

                let currentPage = 0;
                const totalPages = Math.ceil(items.length / itemsPerPage);

                function updateCarousel(animate = true) {
                    // Calculate transform offset
                    const offset = -(currentPage * 100);
                    
                    // Apply transform for smooth sliding
                    if (animate) {
                        container.style.transition = 'transform 0.5s cubic-bezier(0.4, 0, 0.2, 1)';
                    } else {
                        container.style.transition = 'none';
                    }
                    container.style.transform = `translateX(${offset}%)`;

                    // Update button states
                    if (prevBtn) {
                        prevBtn.disabled = currentPage === 0;
                        prevBtn.style.opacity = currentPage === 0 ? '0.3' : '1';
                    }
                    if (nextBtn) {
                        nextBtn.disabled = currentPage === totalPages - 1;
                        nextBtn.style.opacity = currentPage === totalPages - 1 ? '0.3' : '1';
                    }
                    
                    console.log(`Page ${currentPage + 1}/${totalPages}`);
                }

                if (prevBtn) {
                    prevBtn.addEventListener('click', () => {
                        if (currentPage > 0) {
                            currentPage--;
                            updateCarousel();
                        }
                    });
                }

                if (nextBtn) {
                    nextBtn.addEventListener('click', () => {
                        if (currentPage < totalPages - 1) {
                            currentPage++;
                            updateCarousel();
                        }
                    });
                }

                updateCarousel(false);
