<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shipper Dashboard</title>
    <link rel="icon" type="image/png" href="/images/BloomieFavicon.png" sizes="32x32" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #10b981;
            --secondary-color: #34d399;
            --background-light: #f0fdf4;
            --sidebar-bg: #065f46;
            --text-dark: #1e293b;
            --text-light: #ffffff;
            --accent-color: #6ee7b7;
            --shadow: 0 4px 12px rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--background-light);
            color: var(--text-dark);
            margin: 0;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 260px;
            height: 100vh;
            background: linear-gradient(180deg, var(--sidebar-bg) 0%, #047857 100%);
            color: var(--text-light);
            padding: 20px;
            box-shadow: var(--shadow);
            z-index: 1000;
            overflow-y: auto;
        }

        .sidebar-header {
            text-align: center;
            padding: 20px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            margin-bottom: 20px;
        }

        .sidebar-header h3 {
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0;
            color: var(--text-light);
        }

        .sidebar-header p {
            font-size: 0.875rem;
            margin: 5px 0 0;
            color: var(--accent-color);
        }

        .nav-section-title {
            font-size: 0.75rem;
            font-weight: 600;
            color: var(--accent-color);
            text-transform: uppercase;
            margin: 20px 0 10px;
            padding: 0 10px;
        }

        .sidebar .nav-link {
            color: var(--text-light);
            padding: 12px 15px;
            margin-bottom: 5px;
            border-radius: 8px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            font-size: 0.95rem;
        }

        .sidebar .nav-link:hover {
            background: rgba(255, 255, 255, 0.1);
            transform: translateX(5px);
        }

        .sidebar .nav-link.active {
            background: var(--primary-color);
            font-weight: 600;
        }

        .sidebar .nav-link i {
            width: 20px;
            margin-right: 10px;
            font-size: 1.1rem;
        }

        /* Main Content */
        .main-content {
            margin-left: 260px;
            padding: 30px;
            min-height: 100vh;
        }

        /* Topbar */
        .topbar {
            background: white;
            padding: 15px 30px;
            border-radius: 10px;
            box-shadow: var(--shadow);
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .topbar h4 {
            margin: 0;
            color: var(--text-dark);
            font-weight: 600;
        }

        /* Cards */
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            margin-bottom: 20px;
        }

        .card-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border-radius: 12px 12px 0 0 !important;
            padding: 15px 20px;
            font-weight: 600;
        }

        /* Buttons */
        .btn-primary {
            background: var(--primary-color);
            border-color: var(--primary-color);
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: #059669;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        }

        .btn-success {
            background: #10b981;
            border-color: #10b981;
        }

        .btn-danger {
            background: #ef4444;
            border-color: #ef4444;
        }

        .btn-warning {
            background: #f59e0b;
            border-color: #f59e0b;
            color: white;
        }

        /* Badge */
        .badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-weight: 500;
        }

        /* Table */
        .table {
            background: white;
            border-radius: 8px;
        }

        .table thead th {
            background: #f9fafb;
            border-bottom: 2px solid #e5e7eb;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.875rem;
        }

        /* Animations */
        .page-content {
            animation: fadeInUp 0.4s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }
            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <i class="fas fa-truck fa-2x mb-2"></i>
            <h3>Bloomie Shipper</h3>
            <p>Hệ thống giao hàng</p>
        </div>

        <nav class="nav flex-column">
            <div class="nav-section-title">Menu chính</div>
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "ShipperOrder" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" 
               asp-area="Shipper" asp-controller="ShipperOrder" asp-action="Index">
                <i class="fas fa-box"></i> Đơn hàng cần giao
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "CODSummary" ? "active" : "")" 
               asp-area="Shipper" asp-controller="ShipperDashboard" asp-action="CODSummary">
                <i class="fas fa-money-bill-wave"></i> Tiền COD
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "History" ? "active" : "")" 
               asp-area="Shipper" asp-controller="ShipperOrder" asp-action="History">
                <i class="fas fa-history"></i> Lịch sử giao hàng
            </a>
            
            <div class="nav-section-title mt-3">Tài khoản</div>
            <a class="nav-link" href="/">
                <i class="fas fa-home"></i> Về trang chủ
            </a>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post" class="d-inline">
                <button type="submit" class="nav-link border-0 bg-transparent w-100 text-start">
                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                </button>
            </form>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="topbar">
            <h4>@ViewData["Title"]</h4>
            <div>
                <span class="text-muted">
                    <i class="fas fa-user-circle me-1"></i> @User.Identity?.Name
                </span>
            </div>
        </div>

        <div class="page-content">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
