@model Bloomie.Models.ViewModels.ShipperDashboardViewModel
@{
    ViewData["Title"] = "Trang chủ Shipper";
}

<div class="container-fluid">
    <!-- Thống kê hôm nay -->
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-muted small mb-1">Đơn hôm nay</div>
                            <div class="h3 mb-0 text-primary">@Model.TotalOrders</div>
                        </div>
                        <div class="text-primary">
                            <i class="fas fa-box fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-muted small mb-1">Đã giao</div>
                            <div class="h3 mb-0 text-success">@Model.CompletedOrders</div>
                        </div>
                        <div class="text-success">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-muted small mb-1">Đang giao</div>
                            <div class="h3 mb-0 text-warning">@Model.InProgressOrders</div>
                        </div>
                        <div class="text-warning">
                            <i class="fas fa-shipping-fast fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-muted small mb-1">Tiền COD hôm nay</div>
                            <div class="h4 mb-0 text-danger">@Model.CodCollectedToday.ToString("N0")₫</div>
                        </div>
                        <div class="text-danger">
                            <i class="fas fa-money-bill-wave fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Đơn COD hôm nay (nếu có) -->
    @if (Model.CodOrders.Any())
    {
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light border-bottom">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-money-bill-wave text-danger me-2"></i> Tiền COD cần nộp
                    </h5>
                    <a asp-action="CODSummary" class="btn btn-sm btn-danger">
                        <i class="fas fa-eye me-1"></i> Xem chi tiết
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="alert alert-warning mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Nhớ nộp lại tiệm:</strong> @Model.CodOrders.Count đơn COD
                        </div>
                        <div class="h4 mb-0 text-danger">@Model.CodCollectedToday.ToString("N0")₫</div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-sm mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Mã đơn</th>
                                <th class="text-end">Số tiền</th>
                                <th class="text-center">Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.CodOrders.Take(5))
                            {
                                <tr>
                                    <td><strong>#@order.OrderId</strong></td>
                                    <td class="text-end fw-bold text-danger">@order.TotalAmount.ToString("N0")₫</td>
                                    <td class="text-center">
                                        @if (order.PaymentStatus == "Đã thanh toán")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Đã thu
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock"></i> Chưa thu
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Quick Actions -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <a asp-controller="ShipperOrder" asp-action="Index" class="btn btn-primary w-100 btn-lg">
                        <i class="fas fa-list me-2"></i> Đơn cần giao
                    </a>
                </div>
                <div class="col-md-4">
                    <a asp-action="CODSummary" class="btn btn-danger w-100 btn-lg">
                        <i class="fas fa-money-bill-wave me-2"></i> Tiền COD
                    </a>
                </div>
                <div class="col-md-4">
                    <a asp-controller="ShipperOrder" asp-action="History" class="btn btn-secondary w-100 btn-lg">
                        <i class="fas fa-history me-2"></i> Lịch sử
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
