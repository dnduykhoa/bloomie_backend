@model IEnumerable<Bloomie.Models.Entities.Order>
@{
    ViewData["Title"] = "Tiền COD cần nộp";
    var selectedDate = DateTime.Parse(ViewBag.SelectedDate);
    var totalAmount = (decimal)ViewBag.TotalAmount;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0"><i class="fas fa-money-bill-wave me-2"></i> Tiền COD cần nộp</h4>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay lại Dashboard
        </a>
    </div>

    <!-- Filter ngày -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Chọn ngày</label>
                    <input type="date" name="date" class="form-control" 
                           value="@selectedDate.ToString("yyyy-MM-dd")" 
                           max="@DateTime.Now.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i> Xem
                    </button>
                </div>
                <div class="col-md-6 text-end">
                    <div class="alert alert-info mb-0">
                        <i class="fas fa-info-circle me-1"></i> 
                        Hiển thị đơn COD ngày <strong>@selectedDate.ToString("dd/MM/yyyy")</strong>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Tổng tiền nổi bật -->
        <div class="card shadow-sm border-danger border-2 mb-4">
            <div class="card-body text-center">
                <h5 class="text-muted mb-2">Tổng tiền cần nộp lại tiệm</h5>
                <div class="display-4 text-danger fw-bold">@totalAmount.ToString("N0")₫</div>
                <small class="text-muted">Từ @Model.Count() đơn COD</small>
            </div>
        </div>

        <!-- Danh sách đơn COD -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light border-bottom">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-list me-2"></i> Danh sách đơn COD (@Model.Count() đơn)
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>STT</th>
                                <th>Mã đơn</th>
                                <th>Thời gian giao</th>
                                <th>Khách hàng</th>
                                <th>Địa chỉ</th>
                                <th class="text-end">Số tiền</th>
                                <th class="text-center">Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int index = 1;}
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>
                                        <a asp-controller="ShipperOrder" asp-action="Details" asp-route-id="@order.Id" 
                                           class="text-decoration-none">
                                            <strong>#@order.OrderId</strong>
                                        </a>
                                    </td>
                                    <td>@order.DeliveryDate?.ToString("HH:mm dd/MM/yyyy")</td>
                                    <td>@order.ReceiverName</td>
                                    <td><small>@order.ShippingAddress</small></td>
                                    <td class="text-end fw-bold text-danger">@order.TotalAmount.ToString("N0")₫</td>
                                    <td class="text-center">
                                        @if (order.PaymentStatus == "Đã thanh toán")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> Đã thu tiền
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock"></i> Chưa thu
                                            </span>
                                        }
                                    </td>
                                </tr>
                                index++;
                            }
                        </tbody>
                        <tfoot class="bg-light">
                            <tr>
                                <td colspan="5" class="text-end fw-bold h5 mb-0">Tổng cộng:</td>
                                <td class="text-end fw-bold text-danger h4 mb-0">@totalAmount.ToString("N0")₫</td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Nút hành động -->
        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <a href="tel:0123456789" class="btn btn-success w-100 btn-lg">
                    <i class="fas fa-phone me-2"></i> Gọi quản lý
                </a>
            </div>
            <div class="col-md-6">
                <a asp-action="Index" class="btn btn-secondary w-100 btn-lg">
                    <i class="fas fa-arrow-left me-2"></i> Quay lại Dashboard
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle fa-3x mb-3 d-block"></i>
            <h5>Không có đơn COD nào trong ngày @selectedDate.ToString("dd/MM/yyyy")</h5>
            <p class="mb-0">Chọn ngày khác để xem danh sách đơn COD.</p>
        </div>
    }
</div>
