@model Bloomie.Models.Entities.Order

@{
    Layout = "~/Areas/Staff/Views/Shared/_StaffLayout.cshtml";
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-dark">
                    <i class="fas fa-file-invoice text-primary me-2"></i> Chi tiết đơn hàng
                </h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Quay lại
                </a>
            </div>

            @if (TempData["success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @TempData["success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    @TempData["error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Thông tin đơn hàng -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">Mã đơn hàng:</th>
                                    <td><strong class="text-primary">@Model.OrderId</strong></td>
                                </tr>
                                <tr>
                                    <th>Ngày đặt:</th>
                                    <td>@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <th>Khách hàng:</th>
                                    <td>@(Model.UserId ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <th>Số điện thoại:</th>
                                    <td>@(Model.Phone ?? "N/A")</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">Tổng tiền:</th>
                                    <td><strong class="text-success fs-5">@Model.TotalAmount.ToString("N0") đ</strong></td>
                                </tr>
                                <tr>
                                    <th>Trạng thái:</th>
                                    <td>
@{
    var statusBadge = Model.Status switch
    {
        "Chờ xác nhận" => "bg-warning text-dark",
        "Đã xác nhận" => "bg-info",
        "Đang giao" => "bg-primary",
        "Đã giao" => "bg-success",
        "Hoàn thành" => "bg-success",
        "Đã hủy" => "bg-danger",
        _ => "bg-secondary"
    };
}
<span class="badge @statusBadge fs-6">@Model.Status</span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Thanh toán:</th>
                                    <td>
                                        <span class="badge @(Model.PaymentStatus == "Đã thanh toán" ? "bg-success" : "bg-warning text-dark")">
                                            @Model.PaymentStatus
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Phương thức:</th>
                                    <td>@(Model.PaymentMethod ?? "N/A")</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ShippingAddress))
                    {
                        <hr>
                        <div class="row">
                            <div class="col-12">
                                <h6><i class="fas fa-map-marker-alt text-danger me-2"></i>Địa chỉ giao hàng:</h6>
                                <p class="mb-0">@Model.ShippingAddress</p>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Note))
                    {
                        <hr>
                        <div class="row">
                            <div class="col-12">
                                <h6><i class="fas fa-sticky-note text-info me-2"></i>Ghi chú:</h6>
                                <p class="mb-0">@Model.Note</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Chi tiết sản phẩm -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-box-open me-2"></i>Chi tiết sản phẩm</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end">Đơn giá</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.OrderDetails != null && Model.OrderDetails.Any())
                                {
                                    foreach (var detail in Model.OrderDetails)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (detail.Product?.ImageUrl != null)
                                                    {
                                                        <img src="@detail.Product.ImageUrl" alt="@detail.Product.Name" 
                                                             class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                                    }
                                                    <div>
                                                        <strong>@(detail.Product?.Name ?? "N/A")</strong>
                                                        @if (detail.Product?.Id != null)
                                                        {
                                                            <br><small class="text-muted">ID: @detail.Product.Id</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-primary">@detail.Quantity</span>
                                            </td>
                                            <td class="text-end">@detail.UnitPrice.ToString("N0") đ</td>
                                            <td class="text-end">
                                                <strong>@((detail.UnitPrice * detail.Quantity).ToString("N0")) đ</strong>
                                            </td>
                                        </tr>
                                    }
                                    <tr class="table-active">
                                        <td colspan="3" class="text-end"><strong>Tổng cộng:</strong></td>
                                        <td class="text-end">
                                            <strong class="text-success fs-5">@Model.TotalAmount.ToString("N0") đ</strong>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">Không có sản phẩm nào</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Thao tác -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Thao tác</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        @if (Model.Status == "Chờ xác nhận")
                        {
                            <div class="col-md-6">
                                <form asp-action="ConfirmOrder" asp-route-id="@Model.Id" method="post" 
                                      onsubmit="return confirm('Bạn có chắc muốn xác nhận đơn hàng này?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success w-100 btn-lg">
                                        <i class="fas fa-check-circle me-2"></i> Xác nhận đơn hàng
                                    </button>
                                </form>
                            </div>
                        }
                        
                        @if (Model.Status == "Đã xác nhận")
                        {
                            <div class="col-md-6">
                                <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="newStatus" value="Đang giao" />
                                    <button type="submit" class="btn btn-primary w-100 btn-lg">
                                        <i class="fas fa-shipping-fast me-2"></i> Chuyển sang "Đang giao"
                                    </button>
                                </form>
                            </div>
                        }
                        
                        @if (Model.Status == "Đang giao")
                        {
                            <div class="col-md-6">
                                <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="newStatus" value="Đã giao" />
                                    <button type="submit" class="btn btn-success w-100 btn-lg">
                                        <i class="fas fa-truck me-2"></i> Đánh dấu "Đã giao"
                                    </button>
                                </form>
                            </div>
                        }
                        
                        @if (Model.Status == "Đã giao")
                        {
                            <div class="col-md-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-1"></i> Đang chờ khách hàng xác nhận đã nhận hàng.
                                    Sau 5 ngày sẽ tự động chuyển sang "Hoàn thành".
                                </div>
                            </div>
                        }

                        <div class="col-md-6">
                            <a asp-action="Index" class="btn btn-secondary w-100 btn-lg">
                                <i class="fas fa-arrow-left me-2"></i> Quay lại danh sách
                            </a>
                        </div>
                    </div>
                    
                    @if (Model.Status != "Hoàn thành" && Model.Status != "Đã hủy" && Model.Status != "Đã giao")
                    {
                        <hr>
                        <div class="row">
                            <div class="col-12">
                                <p class="text-muted mb-2"><i class="fas fa-info-circle me-2"></i>Cập nhật trạng thái khác:</p>
                                <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <select name="newStatus" class="form-select d-inline-block w-auto me-2" required>
                                        <option value="">-- Chọn trạng thái --</option>
                                        <option value="Chờ xác nhận">Chờ xác nhận</option>
                                        <option value="Đã xác nhận">Đã xác nhận</option>
                                        <option value="Đang giao">Đang giao</option>
                                        <option value="Đã giao">Đã giao</option>
                                        <option value="Đã hủy">Đã hủy</option>
                                    </select>
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fas fa-sync-alt me-1"></i> Cập nhật
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}
