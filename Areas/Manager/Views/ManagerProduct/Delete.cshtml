@model Bloomie.Models.Entities.Product
@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayout.cshtml";
}

<div class="container-fluid mt-2 p-0">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-dark">
                    <i class="fas fa-trash text-danger me-2"></i> Xác nhận xóa sản phẩm
                </h2>
            </div>

            <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa sản phẩm này không? Thao tác này không thể hoàn tác.
            </div>

            <div class="row">
                <!-- Product Info -->
                <div class="col-md-6">
                    <div class="card mb-3 shadow-sm border">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-info-circle text-primary me-2"></i> Thông tin sản phẩm</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="text-muted small">Tên sản phẩm</label>
                                <div class="fw-bold fs-5">@Model.Name</div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="text-muted small">Giá bán</label>
                                    <div class="fw-bold text-danger">@Model.Price.ToString("N0") đ</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="text-muted small">Số lượng tồn kho</label>
                                    <div class="fw-bold">
                                        <span class="badge @(Model.StockQuantity > 10 ? "bg-success" : Model.StockQuantity > 0 ? "bg-warning" : "bg-danger")">
                                            @Model.StockQuantity
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="text-muted small">Danh mục</label>
                                <div>
                                    @if (Model.ProductCategories != null && Model.ProductCategories.Any())
                                    {
                                        @foreach (var pc in Model.ProductCategories)
                                        {
                                            <span class="badge bg-info me-1">@pc.Category.Name</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa phân loại</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Product Image -->
                <div class="col-md-6">
                    <div class="card mb-3 shadow-sm border">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-image text-primary me-2"></i> Hình ảnh</h5>
                        </div>
                        <div class="card-body text-center">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow" style="max-height: 300px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="text-muted py-5">
                                    <i class="fas fa-image fa-3x mb-3"></i>
                                    <p>Không có ảnh</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between gap-2 mt-4 pt-3 border-top">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Hủy bỏ
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Xác nhận xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #0e7490;
        --secondary-color: #06b6d4;
        --text-dark: #164e63;
        --text-light: #ffffff;
        --background-light: #f0fdfa;
    }

    h2 {
        font-family: 'Inter', sans-serif;
        font-size: 1.75rem;
        font-weight: 600;
        color: var(--text-dark);
    }

    .card {
        border-radius: 8px;
        background-color: #ffffff;
    }

    .card-header {
        border-radius: 8px 8px 0 0 !important;
        padding: 12px 20px;
    }

    .btn-primary, .btn-secondary, .btn-danger {
        border-radius: 6px;
        padding: 8px 16px;
        font-size: 0.9rem;
        transition: all 0.2s ease;
    }

    .btn-secondary {
        background-color: #6b7280;
        border-color: #6b7280;
    }

    .btn-secondary:hover {
        background-color: #4b5563;
        transform: translateY(-1px);
    }

    .btn-danger {
        background-color: #ef4444;
        border-color: #ef4444;
    }

    .btn-danger:hover {
        background-color: #dc2626;
        transform: translateY(-1px);
    }

    .badge {
        font-size: 0.85rem;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 500;
    }

    .shadow-sm {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08) !important;
    }

    .gap-2 {
        gap: 0.5rem;
    }

    .alert-danger {
        border-radius: 6px;
        border-left: 4px solid #ef4444;
    }
</style>
