@model IEnumerable<Bloomie.Models.Entities.Promotion>
@{
    ViewData["Title"] = "Quản lý khuyến mãi";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayout.cshtml";
    
    // Filter parameters
    string? searchString = ViewBag.SearchString as string;
    string? type = ViewBag.Type as string;
    string? status = ViewBag.Status as string;
    bool? isPublic = ViewBag.IsPublic as bool?;
    
    int stt = 1;
    
    // Statistics
    int totalPromotions = ViewBag.TotalPromotions ?? 0;
    int activePromotions = ViewBag.ActivePromotions ?? 0;
    int expiredPromotions = ViewBag.ExpiredPromotions ?? 0;
    int upcomingPromotions = ViewBag.UpcomingPromotions ?? 0;
}

<div class="container-fluid mt-2 p-0">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <!-- Header and Buttons -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-dark mb-0">
                    <i class="fas fa-tags text-primary me-2"></i> Quản lý khuyến mãi
                </h2>
                <a asp-action="CreateTypeSelect" asp-route-tab="code" class="btn btn-primary shadow-sm">
                    <i class="fas fa-plus me-2"></i> Tạo mã khuyến mãi
                </a>
            </div>

            <!-- Statistics Cards -->
            <div class="row g-3 mb-4">
                <div class="col-lg-3 col-md-6">
                    <div class="stat-card stat-card-primary">
                        <div class="stat-icon">
                            <i class="fas fa-tags"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-label">Tổng khuyến mãi</div>
                            <div class="stat-value">@totalPromotions</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stat-card stat-card-success">
                        <div class="stat-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-label">Đang hoạt động</div>
                            <div class="stat-value">@activePromotions</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stat-card stat-card-warning">
                        <div class="stat-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-label">Sắp diễn ra</div>
                            <div class="stat-value">@upcomingPromotions</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stat-card stat-card-danger">
                        <div class="stat-icon">
                            <i class="fas fa-times-circle"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-label">Đã hết hạn</div>
                            <div class="stat-value">@expiredPromotions</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Navigation Tabs -->
            <ul class="nav nav-tabs mb-4">
                <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Index", "ManagerPromotion")">
                        <i class="fas fa-ticket-alt"></i> Mã khuyến mãi
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ManageCampaigns", "ManagerPromotion")">
                        <i class="fas fa-bullhorn"></i> Chương trình khuyến mãi
                    </a>
                </li>
            </ul>

            <!-- Filter Section -->
            <div class="filter-section mb-4">
                <form asp-action="Index" method="get" class="filter-form">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Tìm kiếm</label>
                            <input type="text" name="searchString" class="form-control" placeholder="Tên hoặc mã khuyến mãi..." value="@searchString" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Loại khuyến mãi</label>
                            <select name="type" class="form-select">
                                <option value="">Tất cả</option>
                                <option value="Order" selected="@(type == "Order")">Đơn hàng</option>
                                <option value="Product" selected="@(type == "Product")">Sản phẩm</option>
                                <option value="Shipping" selected="@(type == "Shipping")">Vận chuyển</option>
                                <option value="Gift" selected="@(type == "Gift")">Quà tặng</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Trạng thái</label>
                            <select name="status" class="form-select">
                                <option value="">Tất cả</option>
                                <option value="active" selected="@(status == "active")">Đang hoạt động</option>
                                <option value="upcoming" selected="@(status == "upcoming")">Sắp diễn ra</option>
                                <option value="expired" selected="@(status == "expired")">Đã hết hạn</option>
                                <option value="inactive" selected="@(status == "inactive")">Ngừng hoạt động</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Công khai</label>
                            <select name="isPublic" class="form-select">
                                <option value="">Tất cả</option>
                                <option value="true" selected="@(isPublic == true)">Công khai</option>
                                <option value="false" selected="@(isPublic == false)">Riêng tư</option>
                            </select>
                        </div>
                    </div>
                    <div class="filter-actions mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search me-1"></i>Lọc
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-redo me-1"></i>Xóa lọc
                        </a>
                    </div>
                </form>
            </div>

            <!-- Promotion Table -->
            <div class="table-responsive">
                <table class="table table-hover table-bordered mb-0">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th class="col-stt">STT</th>
                            <th class="col-name">Tên chương trình</th>
                            <th class="col-code">Mã Code</th>
                            <th class="col-type">Loại</th>
                            <th class="col-date">Ngày bắt đầu</th>
                            <th class="col-date">Ngày kết thúc</th>
                            <th class="col-status">Trạng thái</th>
                            <th class="col-public">Công khai</th>
                            <th class="col-actions">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                var firstCode = item.PromotionCodes?.FirstOrDefault();
                                <tr>
                                    <td>@stt</td>
                                    <td class="text-left promotion-name">@item.Name</td>
                                    <td class="code-cell">
                                        @if (firstCode != null)
                                        {
                                            <code class="bg-light px-2 py-1 rounded">@firstCode.Code</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="type-cell">
                                        @switch (item.Type.ToString())
                                        {
                                            case "Order":
                                                <span class="badge bg-info">Đơn hàng</span>
                                                break;
                                            case "Product":
                                                <span class="badge bg-success">Sản phẩm</span>
                                                break;
                                            case "Shipping":
                                                <span class="badge bg-warning text-dark">Vận chuyển</span>
                                                break;
                                            case "Gift":
                                                <span class="badge bg-danger">Quà tặng</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@item.Type</span>
                                                break;
                                        }
                                    </td>
                                    <td class="date-cell">@item.StartDate.ToString("dd/MM/yyyy")</td>
                                    <td class="date-cell">@(item.EndDate.HasValue ? item.EndDate.Value.ToString("dd/MM/yyyy") : "Không giới hạn")</td>
                                    <td class="status-cell" style="text-align: center;">
                                        @if (item.StartDate > DateTime.Now)
                                        {
                                            <span class="badge bg-warning text-dark">Chưa kích hoạt</span>
                                        }
                                        else if (item.EndDate.HasValue && item.EndDate.Value < DateTime.Now)
                                        {
                                            <span class="badge bg-danger">Hết hạn</span>
                                        }
                                        else if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Đang hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Ngừng</span>
                                        }
                                    </td>
                                    <td>
                                        @if (firstCode != null)
                                        {
                                            var isExpired = item.EndDate.HasValue && item.EndDate.Value < DateTime.Now;
                                            var btnClass = isExpired 
                                                ? "btn-secondary" 
                                                : (firstCode.IsPublic ? "btn-success" : "btn-outline-secondary");
                                            var tooltipText = isExpired 
                                                ? $"Đã hết hạn - {(firstCode.IsPublic ? "Đã công khai" : "Chưa công khai")}"
                                                : (firstCode.IsPublic ? "Công khai" : "Riêng tư");
                                            
                                            <button class="btn btn-sm toggle-public-btn @btnClass" 
                                                    data-code-id="@firstCode.Id"
                                                    data-is-public="@firstCode.IsPublic.ToString().ToLower()"
                                                    data-bs-toggle="tooltip" 
                                                    data-bs-title="@tooltipText"
                                                    @(isExpired ? "disabled" : "")>
                                                <i class="fas fa-@(firstCode.IsPublic ? "eye" : "eye-slash")"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="actions-cell">
                                        @if (item.Type.ToString() == "Order")
                                        {
                                            <a asp-action="EditOrderDiscount" asp-route-id="@item.Id" class="btn btn-warning btn-sm" data-bs-toggle="tooltip" data-bs-title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        else if (item.Type.ToString() == "Product")
                                        {
                                            <a asp-action="EditProductDiscount" asp-route-id="@item.Id" class="btn btn-warning btn-sm" data-bs-toggle="tooltip" data-bs-title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        else if (item.Type.ToString() == "Shipping")
                                        {
                                            <a asp-action="EditShippingDiscount" asp-route-id="@item.Id" class="btn btn-warning btn-sm" data-bs-toggle="tooltip" data-bs-title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        else if (item.Type.ToString() == "Gift")
                                        {
                                            <a asp-action="EditGift" asp-route-id="@item.Id" class="btn btn-warning btn-sm" data-bs-toggle="tooltip" data-bs-title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        @if (firstCode != null)
                                        {
                                            <button class="btn btn-info btn-sm" onclick="navigator.clipboard.writeText('@firstCode.Code'); alert('Đã copy: @firstCode.Code')" data-bs-toggle="tooltip" data-bs-title="Copy mã">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        }
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" data-bs-toggle="tooltip" data-bs-title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" data-bs-toggle="tooltip" data-bs-title="Xóa" onclick="return confirm('Bạn chắc chắn muốn xóa?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                                stt++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted py-4">Không có khuyến mãi nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
