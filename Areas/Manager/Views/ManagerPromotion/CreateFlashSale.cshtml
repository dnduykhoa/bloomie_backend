@{
    ViewData["Title"] = "Tạo Flash Sale";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayout.cshtml";
    var promoCodes = ViewBag.PromotionCodes as List<Bloomie.Models.Entities.PromotionCode> ?? new List<Bloomie.Models.Entities.PromotionCode>();
}

<div class="container-fluid mt-2 p-0">
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <h2 class="fw-bold text-dark mb-3">
                <i class="fas fa-bolt text-danger me-2"></i> Tạo Flash Sale - Giảm Giá Giới Hạn
            </h2>

            <div class="alert alert-info" style="border-left: 4px solid #0dcaf0;">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Flash Sale:</strong> Voucher giảm giá trong khung giờ nhất định, số lượng có hạn. Users tranh nhau thu thập!
            </div>

            <form method="post" asp-action="CreateFlashSale">
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label class="form-label fw-bold">Tên Flash Sale <span class="text-danger">*</span></label>
                        <input type="text" name="name" class="form-control" required placeholder="VD: Flash Sale 11h - Giảm 50K">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label class="form-label fw-bold">Mô Tả</label>
                        <textarea name="description" class="form-control" rows="2" placeholder="VD: Flash sale trong 1 giờ, số lượng giới hạn 100 voucher, nhanh tay kẻo lỡ!"></textarea>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label class="form-label fw-bold">Chọn Voucher Để Phát <span class="text-danger">*</span></label>
                        <select name="promotionCodeId" class="form-select" required id="voucherSelect">
                            <option value="">-- Chọn voucher --</option>
                            @foreach (var pc in promoCodes)
                            {
                                var discountText = pc.IsPercent 
                                    ? $"Giảm {pc.Value}%" + (pc.MaxDiscount.HasValue ? $" (tối đa {pc.MaxDiscount.Value:N0}đ)" : "")
                                    : $"Giảm {(pc.Value ?? 0):N0}đ";
                                <option value="@pc.Id" 
                                        data-code="@pc.Code" 
                                        data-discount="@discountText">
                                    [@pc.Code] - @discountText
                                </option>
                            }
                        </select>
                        <small class="text-muted">Voucher này sẽ được phát cho users trong Flash Sale</small>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Thời Gian Bắt Đầu <span class="text-danger">*</span></label>
                        <input type="datetime-local" name="startDate" class="form-control" required id="startDateInput">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Thời Gian Kết Thúc <span class="text-danger">*</span></label>
                        <input type="datetime-local" name="endDate" class="form-control" required id="endDateInput">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Tổng Số Voucher <span class="text-danger">*</span></label>
                        <input type="number" name="totalVouchers" class="form-control" required min="1" value="100" placeholder="VD: 100">
                        <small class="text-muted">Tổng số voucher có thể phát trong Flash Sale</small>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Giới Hạn/User <span class="text-danger">*</span></label>
                        <input type="number" name="maxVouchersPerUser" class="form-control" required min="1" max="10" value="1" placeholder="1">
                        <small class="text-muted">Mỗi user thu thập tối đa bao nhiêu voucher</small>
                    </div>
                </div>

                <div class="alert alert-warning" style="border-left: 4px solid #ffc107;">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Lưu ý:</strong> Flash Sale có tính cạnh tranh cao. Voucher sẽ hết nhanh nếu có nhiều users tham gia!
                </div>

                <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                    <a asp-action="CreateTypeSelect" asp-route-tab="program" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-bolt me-1"></i> Tạo Flash Sale
                    </button>
                </div>
            </form>
        </div>
    </div>
</div><style>
