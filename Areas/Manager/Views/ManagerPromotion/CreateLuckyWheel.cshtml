        transform: translateY(-1px);
        box-shadow: 0 2px 6px rgba(14, 116, 144, 0.2);
    }

    .btn-outline-warning:hover {
        transform: translateY(-1px);
        box-shadow: 0 2px 6px rgba(255, 193, 7, 0.2);
    }
</style>

<script>
    let voucherRateIndex = 0;
    const promoCodes = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
        promoCodes.Select(pc => new { 
            id = pc.Id, 
            code = pc.Code, 
            discount = pc.IsPercent 
                ? $"Giảm {pc.Value}%" + (pc.MaxDiscount.HasValue ? $" (tối đa {pc.MaxDiscount.Value:N0}đ)" : "")
                : $"Giảm {(pc.Value ?? 0):N0}đ"
        }).ToList()
    ));

    function addVoucherRate() {
        const container = document.getElementById('voucherRatesContainer');
        const div = document.createElement('div');
        div.className = 'card mb-2 voucher-rate-entry';
        div.innerHTML = `
            <div class="card-body p-3">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <label class="form-label">Voucher</label>
                        <select class="form-select voucher-select" required>
                            <option value="">-- Chọn voucher --</option>
                            ${promoCodes.map(pc => `<option value="${pc.id}">[${pc.code}] - ${pc.discount}</option>`).join('')}
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Tỉ Lệ Trúng (0.0 - 1.0)</label>
                        <input type="number" class="form-control rate-input" step="0.01" min="0" max="1" value="0.3" required>
                    </div>
                    <div class="col-md-2 text-end">
                        <label class="form-label d-block">&nbsp;</label>
                        <button type="button" class="btn btn-danger btn-sm" onclick="this.closest('.voucher-rate-entry').remove(); updateTotalRate();">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                </div>
            </div>
        `;
        container.appendChild(div);
        
        // Add event listener to update total rate
        div.querySelector('.rate-input').addEventListener('input', updateTotalRate);
        
        voucherRateIndex++;
        updateTotalRate();
    }

    function addLuckySlot() {
        const container = document.getElementById('voucherRatesContainer');
        const div = document.createElement('div');
        div.className = 'card mb-2 voucher-rate-entry lucky-slot-entry';
        div.innerHTML = `
            <div class="card-body p-3 bg-light">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <label class="form-label">
                            <i class="bi bi-clover text-warning me-1"></i>
                            <strong>Ô "Chúc May Mắn Lần Sau"</strong>
                        </label>
                        <input type="text" class="form-control" value="Không trúng thưởng" disabled>
                        <input type="hidden" class="lucky-slot-marker" value="lucky">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Tỉ Lệ Trúng (0.0 - 1.0)</label>
                        <input type="number" class="form-control rate-input" step="0.01" min="0" max="1" value="0.2" required>
                    </div>
                    <div class="col-md-2 text-end">
                        <label class="form-label d-block">&nbsp;</label>
                        <button type="button" class="btn btn-danger btn-sm" onclick="this.closest('.voucher-rate-entry').remove(); updateTotalRate();">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                </div>
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i>
                    User trúng ô này sẽ KHÔNG nhận được voucher
                </small>
            </div>
        `;
        container.appendChild(div);
        
        // Add event listener to update total rate
        div.querySelector('.rate-input').addEventListener('input', updateTotalRate);
        
        voucherRateIndex++;
        updateTotalRate();
    }

    function updateTotalRate() {
        const rates = document.querySelectorAll('.rate-input');
        let total = 0;
        rates.forEach(r => total += parseFloat(r.value || 0));
        
        // Display total rate (optional, for admin feedback)
        console.log('Total rate:', total.toFixed(2));
    }

    // Add initial voucher rate entries
    addVoucherRate();
    addVoucherRate();
    addVoucherRate();

    // On form submit, build JSON
    document.getElementById('luckyWheelForm').addEventListener('submit', function(e) {
        const voucherRates = [];
        const entries = document.querySelectorAll('.voucher-rate-entry');
        entries.forEach(entry => {
            const rate = parseFloat(entry.querySelector('.rate-input').value);
            
            // Check if this is a lucky slot
            const isLuckySlot = entry.querySelector('.lucky-slot-marker');
            
            if (isLuckySlot) {
                // Lucky slot (no prize)
                if (rate >= 0) {
                    voucherRates.push({ Id: 0, Rate: rate, IsLucky: true });
                }
            } else {
                // Regular voucher slot
                const voucherId = entry.querySelector('.voucher-select').value;
                if (voucherId && rate >= 0) {
                    voucherRates.push({ Id: parseInt(voucherId), Rate: rate, IsLucky: false });
                }
            }
        });

        if (voucherRates.length === 0) {
            e.preventDefault();
            alert('Vui lòng thêm ít nhất 1 voucher hoặc ô may mắn với tỉ lệ > 0!');
            return false;
        }

        // Kiểm tra tổng tỷ lệ
        let totalRate = voucherRates.reduce((sum, vr) => sum + vr.Rate, 0);
        totalRate = Math.round(totalRate * 100) / 100;

        if (totalRate > 1) {
            e.preventDefault();
            alert('Tổng tỉ lệ vượt quá 100%. Vui lòng giảm lại!');
            return false;
        }
        if (totalRate < 1 && voucherRates.length > 0) {
            // Tự động cộng phần thiếu vào entry cuối cùng
            const missing = Math.round((1 - totalRate) * 100) / 100;
            voucherRates[voucherRates.length - 1].Rate += missing;
            totalRate = 1;
            alert('Hệ thống đã tự động cộng phần thiếu vào entry cuối cùng để đủ 100%.');
        }

        document.getElementById('voucherIdsJsonInput').value = JSON.stringify(voucherRates);
    });

    // Set default start/end dates
    const now = new Date();
    const startInput = document.getElementById('startDateInput');
    const endInput = document.getElementById('endDateInput');
    
    // Function to format datetime-local input (YYYY-MM-DDTHH:mm)
    function formatDateTimeLocal(date) {
        const year = date.getFullYear();
        const month = String(date.getMonth() + 1).padStart(2, '0');
        const day = String(date.getDate()).padStart(2, '0');
        const hours = String(date.getHours()).padStart(2, '0');
        const minutes = String(date.getMinutes()).padStart(2, '0');
        return `${year}-${month}-${day}T${hours}:${minutes}`;
    }
    
    // Start: Ngay bây giờ (immediate start) - LOCAL TIME
    startInput.value = formatDateTimeLocal(now);
    
    const nextWeek = new Date(now.getTime() + 7 * 24 * 60 * 60 * 1000);
    endInput.value = nextWeek.toISOString().slice(0, 16);
</script>
