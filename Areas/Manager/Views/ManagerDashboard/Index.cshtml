@model Bloomie.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Manager Dashboard";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayout.cshtml";
}

<div class="dashboard-container">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary"><i class="fas fa-tachometer-alt"></i> Manager Dashboard</h2>
            <p class="text-muted">Chào mừng <strong>@User.Identity!.Name</strong> đến với bảng điều khiển quản lý</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1">Tổng người dùng</p>
                            <h3 class="mb-0">@Model.TotalUsers</h3>
                        </div>
                        <div class="text-primary">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1">Hoạt động</p>
                            <h3 class="mb-0">@Model.ActiveUsers</h3>
                        </div>
                        <div class="text-success">
                            <i class="fas fa-user-check fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1">Người dùng mới (Tháng)</p>
                            <h3 class="mb-0">@Model.NewUsersThisMonth</h3>
                        </div>
                        <div class="text-info">
                            <i class="fas fa-user-plus fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1">Đăng nhập (Hôm nay)</p>
                            <h3 class="mb-0">@Model.LoginsTodayCount</h3>
                        </div>
                        <div class="text-warning">
                            <i class="fas fa-sign-in-alt fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts and Recent Activity -->
    <div class="row g-3">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-chart-pie"></i> Phân bố vai trò</h5>
                </div>
                <div class="card-body">
                    @if (Model.UsersByRole != null && Model.UsersByRole.Any())
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Vai trò</th>
                                    <th class="text-end">Số lượng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in Model.UsersByRole)
                                {
                                    <tr>
                                        <td>@role.Key</td>
                                        <td class="text-end"><span class="badge bg-primary">@role.Value</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Chưa có dữ liệu</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-history"></i> Hoạt động gần đây</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentActivities != null && Model.RecentActivities.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var activity in Model.RecentActivities.Take(5))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between">
                                        <span><strong>@activity.UserName</strong> - @activity.Action</span>
                                        <small class="text-muted">@activity.Timestamp.ToString("dd/MM HH:mm")</small>
                                    </div>
                                    <small class="text-muted">IP: @activity.IpAddress</small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Chưa có hoạt động</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .dashboard-container {
        padding: 20px;
    }
    .card {
        transition: transform 0.2s;
    }
    .card:hover {
        transform: translateY(-5px);
    }
</style>
