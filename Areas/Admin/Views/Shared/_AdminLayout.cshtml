    <script>
        // Page Transition Effect
        document.addEventListener('DOMContentLoaded', function () {
            const overlay = document.getElementById('pageTransitionOverlay');
            
            // Handle all navigation links
            document.querySelectorAll('a:not([target="_blank"]):not([href^="#"]):not([href^="javascript:"]):not(.no-transition)').forEach(link => {
                link.addEventListener('click', function(e) {
                    const href = this.getAttribute('href');
                    if (href && href !== '#' && !href.startsWith('javascript:') && !this.classList.contains('dropdown-item')) {
                        // Don't interfere with dropdown items
                        if (!this.closest('.dropdown-menu')) {
                            e.preventDefault();
                            overlay.classList.add('active');
                            setTimeout(() => {
                                window.location.href = href;
                            }, 300);
                        }
                    }
                });
            });

            // Hide overlay on page load
            setTimeout(() => {
                overlay.classList.remove('active');
            }, 100);
        });

        document.addEventListener('DOMContentLoaded', function () {
            const sidebar = document.getElementById('sidebar-wrapper');
            const content = document.getElementById('page-content-wrapper');
            const toggleButton = document.getElementById('sidebarToggle');

            // Lấy URL hiện tại và chuẩn hóa
            let currentUrl = window.location.pathname.toLowerCase();
            if (currentUrl.endsWith('/')) {
                currentUrl = currentUrl.slice(0, -1);
            }
            if (currentUrl === '') {
                currentUrl = '/';
            }

            // Chọn tất cả các liên kết trong sidebar
            const sidebarLinks = document.querySelectorAll('.list-group-item, .submenu-item');
            sidebarLinks.forEach(link => {
                let linkUrl = link.getAttribute('href')?.toLowerCase();
                if (linkUrl && linkUrl.endsWith('/')) {
                    linkUrl = linkUrl.slice(0, -1);
                }
                // So sánh URL, cho phép khớp với controller/action
                if (linkUrl) {
                    // Kiểm tra khớp chính xác hoặc khớp với phần controller/action
                    const linkParts = linkUrl.split('/');
                    const currentParts = currentUrl.split('/');
                    const linkControllerAction = linkParts.slice(-2).join('/');
                    const currentControllerAction = currentParts.slice(-2).join('/');
                    if (linkUrl === currentUrl || linkControllerAction === currentControllerAction) {
                        link.classList.add('active');
                        // Nếu là mục con, mở rộng submenu cha nhưng không thêm .active
                        const parentSubmenu = link.closest('.submenu');
                        if (parentSubmenu) {
                            parentSubmenu.classList.add('show');
                            const parentMenuItem = parentSubmenu.previousElementSibling;
                            if (parentMenuItem && parentMenuItem.classList.contains('has-submenu')) {
                                const toggle = parentMenuItem.querySelector('.submenu-toggle');
                                if (toggle) toggle.classList.remove('collapsed');
                            }
                        }
                    }
                }
            });

            const isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
            if (isCollapsed) {
                sidebar.classList.add('collapsed');
                content.classList.add('shifted');
            }

            toggleButton.addEventListener('click', function () {
                sidebar.classList.toggle('collapsed');
                content.classList.toggle('shifted');
                localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
            });

            document.querySelectorAll('.has-submenu').forEach(item => {
                item.addEventListener('click', function (e) {
                    if (!e.target.closest('.submenu-toggle')) {
                        const submenu = this.nextElementSibling;
                        const toggle = this.querySelector('.submenu-toggle');
                        submenu.classList.toggle('show');
                        toggle.classList.toggle('collapsed');
                    }
                });
            });

            const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
            const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl));

            function handleResize() {
                if (window.innerWidth <= 992) {
                    sidebar.classList.add('collapsed');
                    content.classList.add('shifted');
                    localStorage.setItem('sidebarCollapsed', true);
                } else if (!localStorage.getItem('sidebarCollapsed')) {
                    sidebar.classList.remove('collapsed');
                    content.classList.remove('shifted');
                }
            }

            window.addEventListener('resize', handleResize);
            handleResize();

            // ========== NOTIFICATION SYSTEM ==========
            
            // Helper: Lấy icon theo loại thông báo
            function getNotificationIcon(type, message) {
                if (message.includes('🛒') || message.includes('Đơn hàng mới')) return '<i class="fas fa-shopping-cart notification-icon success"></i>';
                if (message.includes('🔄') || message.includes('Đổi hàng') || message.includes('Hoàn tiền')) return '<i class="fas fa-exchange-alt notification-icon danger"></i>';
                if (message.includes('⭐') || message.includes('đánh giá')) return '<i class="fas fa-star notification-icon info"></i>';
                if (message.includes('🚨') || message.includes('HẾT HÀNG')) return '<i class="fas fa-exclamation-triangle notification-icon danger"></i>';
                if (message.includes('⚠️') || message.includes('Cảnh báo')) return '<i class="fas fa-exclamation-circle notification-icon warning"></i>';
                
                // Default icons theo type
                if (type === 'success') return '<i class="fas fa-check-circle notification-icon success"></i>';
                if (type === 'danger') return '<i class="fas fa-times-circle notification-icon danger"></i>';
                if (type === 'warning') return '<i class="fas fa-exclamation-circle notification-icon warning"></i>';
                return '<i class="fas fa-info-circle notification-icon info"></i>';
            }

            // Helper: Format thời gian dễ đọc
            function formatTimeAgo(dateString) {
                if (!dateString) return 'Không rõ';
                
                let date;
                // Try parsing ISO format first (YYYY-MM-DDTHH:mm:ss)
                if (dateString.includes('T') || dateString.includes('-')) {
                    date = new Date(dateString);
                } 
                // Try dd/MM/yyyy format
                else if (dateString.includes('/')) {
                    const parts = dateString.split(/[\/\s:]/);
                    if (parts.length >= 3) {
                        const day = parseInt(parts[0]);
                        const month = parseInt(parts[1]) - 1;
                        const year = parseInt(parts[2]);
                        const hour = parts[3] ? parseInt(parts[3]) : 0;
                        const minute = parts[4] ? parseInt(parts[4]) : 0;
                        date = new Date(year, month, day, hour, minute);
                    }
                }
                
                // Check if date is valid
                if (!date || isNaN(date.getTime())) {
                    return 'Không rõ';
                }
                
                const now = new Date();
                const seconds = Math.floor((now - date) / 1000);
                
                if (seconds < 60) return 'Vừa xong';
                if (seconds < 3600) return Math.floor(seconds / 60) + ' phút trước';
                if (seconds < 86400) return Math.floor(seconds / 3600) + ' giờ trước';
                if (seconds < 259200) return Math.floor(seconds / 86400) + ' ngày trước'; // < 3 days (259200 = 3 * 24 * 3600)
                
                // Return formatted date for notifications older than 3 days
                return date.toLocaleDateString('vi-VN', { 
                    day: '2-digit', 
                    month: '2-digit', 
                    year: 'numeric' 
                });
            }

            // Load notifications từ database khi page load
            function loadNotifications() {
                fetch('/api/NotificationApi/GetNotifications?take=20')
                    .then(response => response.json())
                    .then(result => {
                        if (result.success) {
                            const notificationList = document.querySelector('.dropdown-menu-notifications');
                            notificationList.innerHTML = '';

                            if (result.data.length === 0) {
                                notificationList.innerHTML = '<li><a class="dropdown-item notification-item" href="#"><span>Chưa có thông báo mới</span></a></li>';
                            } else {
                                result.data.forEach(notif => {
                                    const li = document.createElement('li');
                                    const icon = getNotificationIcon(notif.type, notif.message);
                                    const timeAgo = formatTimeAgo(notif.createdAt);
                                    
                                    li.innerHTML = `
                                        <div class="dropdown-item notification-item ${notif.isRead ? '' : 'unread'}" data-id="${notif.id}" data-type="${notif.type}">
                                            ${icon}
                                            <div class="notification-content">
                                                <a href="${notif.link || '#'}" onclick="markAsRead(${notif.id})">
                                                    <span>${notif.message}</span>
                                                    <div class="notification-time">
                                                        <i class="far fa-clock"></i>
                                                        <span>${timeAgo}</span>
                                                    </div>
                                                </a>
                                            </div>
                                            <button class="btn-delete-notification" onclick="deleteNotification(${notif.id}, event)" title="Xóa">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>`;
                                    notificationList.appendChild(li);
                                });

                                // Thêm nút "Xem tất cả" ở cuối
                                const divider = document.createElement('li');
                                divider.className = 'dropdown-divider';
                                notificationList.appendChild(divider);

                                const viewAllLi = document.createElement('li');
                                viewAllLi.innerHTML = '<a class="dropdown-item text-center view-all-notifications" href="#" onclick="openNotificationModal(event)"><strong>Xem tất cả</strong></a>';
                                notificationList.appendChild(viewAllLi);
                            }

                            // Update badge
                            const badge = document.getElementById('notificationCount');
                            badge.textContent = result.unreadCount;
                            badge.style.display = result.unreadCount > 0 ? 'inline' : 'none';
                        }
                    })
                    .catch(err => console.error('Lỗi load thông báo:', err));
            }

            // Đánh dấu đã đọc
            window.markAsRead = function(notificationId) {
                fetch(`/api/NotificationApi/MarkAsRead/${notificationId}`, { method: 'POST' })
                    .then(response => response.json())
                    .then(result => {
                        if (result.success) {
                            const badge = document.getElementById('notificationCount');
                            badge.textContent = result.unreadCount;
                            badge.style.display = result.unreadCount > 0 ? 'inline' : 'none';
                            
                            const item = document.querySelector(`[data-id="${notificationId}"]`);
                            if (item) item.classList.remove('unread');
                        }
                    });
            }

            // Xóa thông báo
            window.deleteNotification = function(notificationId, event) {
                event.preventDefault();
                event.stopPropagation();
                
                if (confirm('Bạn có chắc muốn xóa thông báo này?')) {
                    fetch(`/api/NotificationApi/Delete/${notificationId}`, { method: 'DELETE' })
                        .then(response => response.json())
                        .then(result => {
                            if (result.success) {
                                loadNotifications(); // Reload list
                            }
                        });
                }
            }

            // Khởi tạo kết nối SignalR
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/notificationHub")
                .withAutomaticReconnect()
                .build();

            // Nhận thông báo realtime qua SignalR (thông báo MỚI)
            connection.on("ReceiveNotification", function (data) {
                console.log("🔔 Nhận thông báo mới:", data);
                
                // Thêm vào đầu danh sách
                const notificationList = document.querySelector('.dropdown-menu-notifications');
                const existingPlaceholder = notificationList.querySelector('.notification-item span')?.textContent === 'Chưa có thông báo mới';
                if (existingPlaceholder) {
                    notificationList.innerHTML = '';
                }

                const icon = getNotificationIcon(data.type, data.message);
                const newNotification = document.createElement('li');
                newNotification.innerHTML = `
                    <div class="dropdown-item notification-item unread" data-id="${data.id}" data-type="${data.type}">
                        ${icon}
                        <div class="notification-content">
                            <a href="${data.link || '#'}" onclick="markAsRead(${data.id})">
                                <span><strong>${data.message}</strong></span>
                                <div class="notification-time">
                                    <i class="far fa-clock"></i>
                                    <span>Vừa xong</span>
                                </div>
                            </a>
                        </div>
                        <button class="btn-delete-notification" onclick="deleteNotification(${data.id}, event)" title="Xóa">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>`;
                notificationList.insertBefore(newNotification, notificationList.firstChild);

                // Cập nhật badge count
                const badge = document.getElementById('notificationCount');
                const currentCount = parseInt(badge.textContent) || 0;
                badge.textContent = currentCount + 1;
                badge.style.display = 'inline';

                // Phát âm thanh thông báo (tạo âm thanh đẹp bằng Web Audio API)
                try {
                    const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                    const oscillator = audioContext.createOscillator();
                    const gainNode = audioContext.createGain();
                    
                    oscillator.connect(gainNode);
                    gainNode.connect(audioContext.destination);
                    
                    // Tạo âm thanh "ting" (2 nốt nhạc nhanh)
                    oscillator.frequency.setValueAtTime(800, audioContext.currentTime);
                    oscillator.frequency.setValueAtTime(1000, audioContext.currentTime + 0.1);
                    
                    gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
                    gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.3);
                    
                    oscillator.start(audioContext.currentTime);
                    oscillator.stop(audioContext.currentTime + 0.3);
                } catch (error) {
                    console.error('Lỗi phát âm thanh:', error);
                }

                // Hiển thị toast notification
                if (typeof Swal !== 'undefined') {
                    Swal.fire({
                        icon: 'info',
                        title: 'Thông báo mới',
                        text: data.message,
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 3000,
                        timerProgressBar: true
                    });
                }
            });

            // Nhận thông báo tin nhắn mới từ customer
            connection.on("NewChatMessage", function (data) {
                console.log("💬 Tin nhắn mới từ:", data.customerName);
                // Cập nhật badge số tin nhắn chưa đọc
                updateChatBadge(data.unreadCount);
                // Force reload dropdown immediately
                loadRecentMessages();
            });

            // Kết nối SignalR
            connection.start().then(() => {
                console.log("✅ Kết nối SignalR thành công!");
                loadNotifications(); // Load notifications sau khi kết nối thành công
                loadUnreadChatCount(); // Load unread chat count
            }).catch(function (err) {
                console.error("❌ Lỗi kết nối SignalR:", err.toString());
            });

            // Tự động reconnect khi mất kết nối
            connection.onclose(() => {
                console.log("🔄 Kết nối SignalR bị ngắt, đang thử kết nối lại...");
                setTimeout(() => connection.start(), 2000);
            });

            // ========== MODAL FUNCTIONS ==========
            
            // Mở modal và load tất cả thông báo
            window.openNotificationModal = function(event) {
                event.preventDefault();
                const modal = new bootstrap.Modal(document.getElementById('notificationModal'));
                modal.show();
                loadAllNotificationsForModal();
            }

            // Load tất cả thông báo vào modal (không giới hạn)
            function loadAllNotificationsForModal() {
                const modalList = document.getElementById('modalNotificationList');
                modalList.innerHTML = '<div class="text-center py-4"><div class="spinner-border text-primary" role="status"></div></div>';

                fetch('/api/NotificationApi/GetNotifications?take=100')
                    .then(response => response.json())
                    .then(result => {
                        if (result.success) {
                            modalList.innerHTML = '';

                            if (result.data.length === 0) {
                                modalList.innerHTML = '<div class="text-center text-muted py-4"><i class="fas fa-bell-slash fa-3x mb-3"></i><p>Chưa có thông báo nào</p></div>';
                            } else {
                                result.data.forEach(notif => {
                                    const div = document.createElement('div');
                                    div.className = `notification-item ${notif.isRead ? '' : 'unread'}`;
                                    div.setAttribute('data-id', notif.id);
                                    div.setAttribute('data-type', notif.type);
                                    
                                    const icon = getNotificationIcon(notif.type, notif.message);
                                    const timeAgo = formatTimeAgo(notif.createdAt);
                                    
                                    div.innerHTML = `
                                        ${icon}
                                        <div class="notification-content flex-grow-1">
                                            <a href="${notif.link || '#'}" onclick="markAsReadAndClose(${notif.id})" class="text-decoration-none">
                                                <span class="${notif.isRead ? 'text-muted' : 'fw-bold'}">${notif.message}</span>
                                                <div class="notification-time">
                                                    <i class="far fa-clock"></i>
                                                    <span>${timeAgo}</span>
                                                </div>
                                            </a>
                                        </div>
                                        <div class="ms-3 d-flex gap-1">
                                            ${!notif.isRead ? `<button class="btn btn-sm btn-outline-success" onclick="markAsReadInModal(${notif.id})" title="Đánh dấu đã đọc"><i class="fas fa-check"></i></button>` : ''}
                                            <button class="btn btn-sm btn-outline-danger" onclick="deleteNotificationInModal(${notif.id})" title="Xóa"><i class="fas fa-trash"></i></button>
                                        </div>
                                    `;
                                    modalList.appendChild(div);
                                });
                            }
                        }
                    })
                    .catch(err => {
                        console.error('Lỗi load thông báo:', err);
                        modalList.innerHTML = '<div class="alert alert-danger">Lỗi tải thông báo. Vui lòng thử lại!</div>';
                    });
            }

            // Đánh dấu đã đọc và đóng modal
            window.markAsReadAndClose = function(notificationId) {
                markAsRead(notificationId);
                bootstrap.Modal.getInstance(document.getElementById('notificationModal')).hide();
            }

            // Đánh dấu đã đọc trong modal
            window.markAsReadInModal = function(notificationId) {
                fetch(`/api/NotificationApi/MarkAsRead/${notificationId}`, { method: 'POST' })
                    .then(response => response.json())
                    .then(result => {
                        if (result.success) {
                            loadAllNotificationsForModal();
                            loadNotifications(); // Cập nhật dropdown
                        }
                    });
            }

            // Xóa thông báo trong modal
            window.deleteNotificationInModal = function(notificationId) {
                if (confirm('Bạn có chắc muốn xóa thông báo này?')) {
                    fetch(`/api/NotificationApi/Delete/${notificationId}`, { method: 'DELETE' })
                        .then(response => response.json())
                        .then(result => {
                            if (result.success) {
                                loadAllNotificationsForModal();
                                loadNotifications(); // Cập nhật dropdown
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Đã xóa thông báo',
                                    toast: true,
                                    position: 'top-end',
                                    showConfirmButton: false,
                                    timer: 2000
                                });
                            }
                        });
                }
            }

            // Đánh dấu tất cả đã đọc
            window.markAllAsReadModal = function() {
                if (confirm('Đánh dấu tất cả thông báo là đã đọc?')) {
                    fetch('/api/NotificationApi/MarkAllAsRead', { method: 'POST' })
                        .then(response => response.json())
                        .then(result => {
                            if (result.success) {
                                loadAllNotificationsForModal();
                                loadNotifications(); // Cập nhật dropdown
                                Swal.fire({
                                    icon: 'success',
                                    title: result.message,
                                    toast: true,
                                    position: 'top-end',
                                    showConfirmButton: false,
                                    timer: 2000
                                });
                            }
                        });
                }
            }

            // Xóa tất cả đã đọc
            window.deleteAllReadModal = function() {
                if (confirm('Xóa tất cả thông báo đã đọc? Hành động này không thể hoàn tác!')) {
                    fetch('/api/NotificationApi/DeleteAll', { method: 'DELETE' })
                        .then(response => response.json())
                        .then(result => {
                            if (result.success) {
                                loadAllNotificationsForModal();
                                loadNotifications(); // Cập nhật dropdown
                                Swal.fire({
                                    icon: 'success',
                                    title: result.message,
                                    toast: true,
                                    position: 'top-end',
                                    showConfirmButton: false,
                                    timer: 2000
                                });
                            }
                        });
                }
            }

            // ========== UNREAD CHAT COUNT ==========
            
            // Load số lượng tin nhắn chưa đọc
            async function loadUnreadChatCount() {
                try {
                    const response = await fetch('/api/supportchat/unread-count');
                    if (response.ok) {
                        const data = await response.json();
                        updateChatBadge(data.unreadCount || 0);
                    }
                } catch (error) {
                    console.error('Error loading unread chat count:', error);
                }
            }

            // Cập nhật badge số tin nhắn chưa đọc (icon message trên navbar)
            function updateChatBadge(count) {
                const badge = document.getElementById('messageCount');
                if (badge) {
                    if (count > 0) {
                        badge.textContent = count > 99 ? '99+' : count;
                        badge.style.display = 'inline-block';
                        badge.style.backgroundColor = '#ef4444'; // Đỏ khi có tin nhắn mới
                    } else {
                        badge.style.display = 'none'; // Ẩn badge khi không có tin nhắn
                    }
                }
                // Load lại danh sách tin nhắn trong dropdown
                loadRecentMessages();
            }

            // Load danh sách tin nhắn gần đây vào dropdown
            async function loadRecentMessages() {
                try {
                    const response = await fetch('/api/supportchat/recent-messages?limit=5');
                    if (response.ok) {
                        const data = await response.json();
                        displayMessages(data.conversations || []);
                    }
                } catch (error) {
                    console.error('Error loading recent messages:', error);
                }
            }

            // Hiển thị tin nhắn trong dropdown
            function displayMessages(conversations) {
                const messageList = document.querySelector('.dropdown-menu-messages');
                if (!messageList) return;

                // Xóa placeholder
                const existingPlaceholder = messageList.querySelector('.message-item span')?.textContent === 'Chưa có tin nhắn mới';
                if (existingPlaceholder) {
                    messageList.innerHTML = '';
                }

                // Chỉ hiển thị conversation có tin nhắn mới từ khách hàng (unreadByStaff > 0)
                const unreadConversations = conversations.filter(conv => conv.unreadByStaff > 0);

                if (unreadConversations.length === 0) {
                    messageList.innerHTML = `
                        <li>
                            <a class="dropdown-item message-item" href="#">
                                <span>Chưa có tin nhắn mới</span>
                            </a>
                        </li>
                        <li class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-center view-all-messages" href="/Admin/Chat">
                                <strong>Xem tất cả</strong>
                            </a>
                        </li>
                    `;
                    return;
                }

                let html = '';
                unreadConversations.forEach(conv => {
                    const unreadClass = conv.unreadByStaff > 0 ? 'unread' : '';
                    const customerName = conv.customerName || 'Khách hàng';
                    
                    // Parse attachment message
                    let lastMessage = conv.lastMessage || 'Chưa có tin nhắn';
                    if (conv.lastMessage && conv.lastMessage.startsWith('[IMAGE:')) {
                        lastMessage = '📷 Đã gửi ảnh';
                    } else if (conv.lastMessage && conv.lastMessage.startsWith('[Đã gửi ảnh]')) {
                        lastMessage = '📷 Đã gửi ảnh';
                    } else if (conv.lastMessage && conv.lastMessage.startsWith('[ATTACHMENT:')) {
                        try {
                            const lastBracket = conv.lastMessage.lastIndexOf(']');
                            let jsonStr = lastBracket === -1 ? conv.lastMessage.substring(12) : conv.lastMessage.substring(12, lastBracket);
                            
                            // Handle incomplete JSON
                            if (lastBracket === -1) {
                                const quoteCount = (jsonStr.match(/"/g) || []).length;
                                if (quoteCount % 2 === 1) {
                                    const lastColon = jsonStr.lastIndexOf(':');
                                    if (lastColon > 0) {
                                        const beforeColon = jsonStr.substring(0, lastColon);
                                        const lastComma = beforeColon.lastIndexOf(',');
                                        if (lastComma > 0) jsonStr = jsonStr.substring(0, lastComma);
                                    }
                                }
                                if (!jsonStr.endsWith('}')) jsonStr += '}';
                            }
                            
                            const attachment = JSON.parse(jsonStr);
                            if (attachment.type === 'product') {
                                const productName = (attachment.productName || 'Sản phẩm').trim().substring(0, 30);
                                lastMessage = '🌸 ' + (productName || 'Sản phẩm');
                            } else if (attachment.type === 'order') {
                                lastMessage = '📦 Đơn hàng #' + (attachment.orderId || '');
                            } else if (attachment.type === 'blog') {
                                lastMessage = '📰 ' + (attachment.title || 'Bài viết').substring(0, 35);
                            } else {
                                lastMessage = '📎 Đính kèm';
                            }
                        } catch (e) {
                            lastMessage = '📎 Đính kèm';
                        }
                    } else {
                        lastMessage = lastMessage.substring(0, 60) + (lastMessage.length > 60 ? '...' : '');
                    }
                    
                    const timeAgo = formatTimeAgo(conv.lastMessageAt);

                    html += `
                        <li>
                            <a class="dropdown-item message-item ${unreadClass}" href="/Admin/Chat?conversationId=${conv.id}" style="display: flex; align-items: start; gap: 12px;">
                                <div class="message-avatar" style="flex-shrink: 0;">
                                    <i class="fas fa-user-circle" style="font-size: 2.5rem; color: #6366f1;"></i>
                                </div>
                                <div class="message-content" style="flex: 1; min-width: 0;">
                                    <strong>${customerName}</strong>
                                    <span>${lastMessage}</span>
                                    <small class="notification-time">
                                        <i class="far fa-clock"></i> ${timeAgo}
                                        ${conv.unreadByStaff > 0 ? `<span style="color: #ef4444; font-weight: 600;"> • ${conv.unreadByStaff} mới</span>` : ''}
                                    </small>
                                </div>
                            </a>
                        </li>
                    `;
                });

                html += `
                    <li class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item text-center view-all-messages" href="/Admin/Chat">
                            <strong>Xem tất cả tin nhắn</strong>
                        </a>
                    </li>
                `;

                messageList.innerHTML = html;
                
                // Thêm event listener để đánh dấu đã đọc khi click vào tin nhắn
                const messageLinks = messageList.querySelectorAll('.message-item[href*="conversationId"]');
                messageLinks.forEach(link => {
                    link.addEventListener('click', async function(e) {
                        // Lấy conversationId từ URL
                        const url = new URL(this.href);
                        const conversationId = url.searchParams.get('conversationId');
                        
                        if (conversationId) {
                            try {
                                // Gọi API đánh dấu đã đọc
                                await fetch(`/api/supportchat/mark-read/${conversationId}`, {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' }
                                });
                                
                                // Cập nhật badge ngay (trừ số unread của conversation này)
                                const unreadSpan = this.querySelector('span[style*="color: #ef4444"]');
                                if (unreadSpan) {
                                    const badge = document.getElementById('messageCount');
                                    if (badge && badge.style.display !== 'none') {
                                        const currentCount = parseInt(badge.textContent) || 0;
                                        const unreadMatch = unreadSpan.textContent.match(/\d+/);
                                        const unreadCount = unreadMatch ? parseInt(unreadMatch[0]) : 1;
                                        const newCount = Math.max(0, currentCount - unreadCount);
                                        updateChatBadge(newCount);
                                    }
                                }
                            } catch (error) {
                                console.error('Error marking conversation as read:', error);
                            }
                        }
                        // Sau đó link sẽ navigate bình thường
                    });
                });
            }

            // Load lại badge mỗi 30 giây (fallback nếu SignalR không hoạt động)
            setInterval(loadUnreadChatCount, 30000);
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>