                    </a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-notifications" aria-labelledby="notificationDropdown">
                        <li><a class="dropdown-item" href="#">Ch∆∞a c√≥ th√¥ng b√°o m·ªõi</a></li>
                    </ul>
                </div>

                <!-- Message Icon -->
                <div class="dropdown">
                    <a class="message-icon" href="#" id="messageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-envelope"></i>
                        <span class="badge-count" id="messageCount" style="display: none;">0</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-messages" aria-labelledby="messageDropdown">
                        <li>
                            <a class="dropdown-item message-item" href="#">
                                <span>ƒêang t·∫£i...</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            
            <!-- User Info -->
            <div class="user-info">
                <div class="user-avatar">
                    @{
                        var userInitial = User.Identity?.Name?.Substring(0, 1).ToUpper() ?? "A";
                    }
                    @userInitial
                </div>
                <span class="user-name">@User.Identity?.Name</span>
            </div>
        </div>
    </div>

    <!-- Chat Content -->
    <div class="chat-content">
        @RenderBody()
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- SignalR -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>

    <script>
        // SignalR Connection
        let connection = null;

        // Load working hours
        async function loadWorkingHours() {
            try {
                const response = await fetch('/api/supportchat/working-hours');
                if (!response.ok) {
                    throw new Error('API not found');
                }
                const data = await response.json();
                document.getElementById('admin-working-hours-text').textContent = data.workingHours || '8:00 AM - 10:00 PM';
            } catch (error) {
                console.error('Error loading working hours:', error);
                document.getElementById('admin-working-hours-text').textContent = '8:00 AM - 10:00 PM';
            }
        }

        // Format time ago
        function formatTimeAgo(dateString) {
            if (!dateString) return 'Kh√¥ng r√µ';
            
            let date;
            if (dateString.includes('T') || dateString.includes('-')) {
                date = new Date(dateString);
            } else if (dateString.includes('/')) {
                const parts = dateString.split(/[\/\s:]/);
                if (parts.length >= 3) {
                    const day = parseInt(parts[0]);
                    const month = parseInt(parts[1]) - 1;
                    const year = parseInt(parts[2]);
                    const hour = parts[3] ? parseInt(parts[3]) : 0;
                    const minute = parts[4] ? parseInt(parts[4]) : 0;
                    date = new Date(year, month, day, hour, minute);
                }
            }
            
            if (!date || isNaN(date.getTime())) return 'Kh√¥ng r√µ';
            
            const now = new Date();
            const seconds = Math.floor((now - date) / 1000);
            
            if (seconds < 60) return 'V·ª´a xong';
            if (seconds < 3600) return Math.floor(seconds / 60) + ' ph√∫t tr∆∞·ªõc';
            if (seconds < 86400) return Math.floor(seconds / 3600) + ' gi·ªù tr∆∞·ªõc';
            if (seconds < 259200) return Math.floor(seconds / 86400) + ' ng√†y tr∆∞·ªõc';
            
            return date.toLocaleDateString('vi-VN', { 
                day: '2-digit', 
                month: '2-digit', 
                year: 'numeric' 
            });
        }

        // Load unread message count
        async function loadUnreadChatCount() {
            try {
                const response = await fetch('/api/supportchat/unread-count');
                if (response.ok) {
                    const data = await response.json();
                    updateChatBadge(data.unreadCount || 0);
                }
            } catch (error) {
                console.error('Error loading unread chat count:', error);
            }
        }

        // Update chat badge
        function updateChatBadge(count) {
            const badge = document.getElementById('messageCount');
            if (badge) {
                if (count > 0) {
                    badge.textContent = count > 99 ? '99+' : count;
                    badge.style.display = 'inline-block';
                    badge.style.backgroundColor = '#ef4444';
                } else {
                    badge.style.display = 'none';
                }
            }
            loadRecentMessages();
        }

        // Load recent messages
        async function loadRecentMessages() {
            try {
                const response = await fetch('/api/supportchat/recent-messages?limit=5');
                if (response.ok) {
                    const data = await response.json();
                    displayMessages(data.conversations || []);
                }
            } catch (error) {
                console.error('Error loading recent messages:', error);
            }
        }

        // Display messages in dropdown
        function displayMessages(conversations) {
            const messageList = document.querySelector('.dropdown-menu-messages');
            if (!messageList) return;

            // Ch·ªâ hi·ªÉn th·ªã conversation c√≥ tin nh·∫Øn m·ªõi t·ª´ kh√°ch h√†ng (unreadByStaff > 0)
            const unreadConversations = conversations.filter(conv => conv.unreadByStaff > 0);

            if (unreadConversations.length === 0) {
                messageList.innerHTML = `
                    <li>
                        <a class="dropdown-item message-item" href="#">
                            <span>Ch∆∞a c√≥ tin nh·∫Øn m·ªõi</span>
                        </a>
                    </li>
                    <li class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item text-center" href="/Admin/Chat">
                            <strong>Xem t·∫•t c·∫£ tin nh·∫Øn</strong>
                        </a>
                    </li>
                `;
                return;
            }

            let html = '';
            unreadConversations.forEach(conv => {
                const unreadClass = conv.unreadByStaff > 0 ? 'unread' : '';
                const customerName = conv.customerName || 'Kh√°ch h√†ng';
                
                // Parse attachment message
                let lastMessage = conv.lastMessage || 'Ch∆∞a c√≥ tin nh·∫Øn';
                if (conv.lastMessage && conv.lastMessage.startsWith('[IMAGE:')) {
                    lastMessage = 'üì∑ ƒê√£ g·ª≠i ·∫£nh';
                } else if (conv.lastMessage && conv.lastMessage.startsWith('[ƒê√£ g·ª≠i ·∫£nh]')) {
                    lastMessage = 'üì∑ ƒê√£ g·ª≠i ·∫£nh';
                } else if (conv.lastMessage && conv.lastMessage.startsWith('[ATTACHMENT:')) {
                    try {
                        const lastBracket = conv.lastMessage.lastIndexOf(']');
                        let jsonStr = lastBracket === -1 ? conv.lastMessage.substring(12) : conv.lastMessage.substring(12, lastBracket);
                        
                        // Handle incomplete JSON
                        if (lastBracket === -1) {
                            const quoteCount = (jsonStr.match(/"/g) || []).length;
                            if (quoteCount % 2 === 1) {
                                const lastColon = jsonStr.lastIndexOf(':');
                                if (lastColon > 0) {
                                    const beforeColon = jsonStr.substring(0, lastColon);
                                    const lastComma = beforeColon.lastIndexOf(',');
                                    if (lastComma > 0) jsonStr = jsonStr.substring(0, lastComma);
                                }
                            }
                            if (!jsonStr.endsWith('}')) jsonStr += '}';
                        }
                        
                        const attachment = JSON.parse(jsonStr);
                        if (attachment.type === 'product') {
                            const productName = (attachment.productName || 'S·∫£n ph·∫©m').trim().substring(0, 30);
                            lastMessage = 'üå∏ ' + (productName || 'S·∫£n ph·∫©m');
                        } else if (attachment.type === 'order') {
                            lastMessage = 'üì¶ ƒê∆°n h√†ng #' + (attachment.orderId || '');
                        } else if (attachment.type === 'blog') {
                            lastMessage = 'üì∞ ' + (attachment.title || 'B√†i vi·∫øt').substring(0, 35);
                        } else {
                            lastMessage = 'üìé ƒê√≠nh k√®m';
                        }
                    } catch (e) {
                        lastMessage = 'üìé ƒê√≠nh k√®m';
                    }
                } else {
                    lastMessage = lastMessage.substring(0, 60) + (lastMessage.length > 60 ? '...' : '');
                }
                
                const timeAgo = formatTimeAgo(conv.lastMessageAt);

                html += `
                    <li>
                        <a class="dropdown-item message-item ${unreadClass}" 
                           href="/Admin/Chat?conversationId=${conv.id}"
                           style="display: flex; align-items: start; gap: 12px;">
                            <div class="message-avatar">
                                <i class="fas fa-user-circle" style="font-size: 2.5rem; color: #6366f1;"></i>
                            </div>
                            <div class="message-content" style="flex: 1; min-width: 0;">
                                <strong>${customerName}</strong>
                                <span>${lastMessage}</span>
                                <small class="notification-time">
                                    <i class="far fa-clock"></i> ${timeAgo}
                                    ${conv.unreadByStaff > 0 ? `<span style="color: #ef4444; font-weight: 600;"> ‚Ä¢ ${conv.unreadByStaff} m·ªõi</span>` : ''}
                                </small>
                            </div>
                        </a>
                    </li>
                `;
            });

            html += `
                <li class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item text-center" href="/Admin/Chat">
                        <strong>Xem t·∫•t c·∫£ tin nh·∫Øn</strong>
                    </a>
                </li>
            `;

            messageList.innerHTML = html;
        }

        // Get notification icon
        function getNotificationIcon(type, message) {
            if (message.includes('üõí') || message.includes('ƒê∆°n h√†ng m·ªõi')) return '<i class="fas fa-shopping-cart notification-icon success"></i>';
            if (message.includes('üîÑ') || message.includes('ƒê·ªïi h√†ng') || message.includes('Ho√†n ti·ªÅn')) return '<i class="fas fa-exchange-alt notification-icon danger"></i>';
            if (message.includes('‚≠ê') || message.includes('ƒë√°nh gi√°')) return '<i class="fas fa-star notification-icon info"></i>';
            if (message.includes('üö®') || message.includes('H·∫æT H√ÄNG')) return '<i class="fas fa-exclamation-triangle notification-icon danger"></i>';
            if (message.includes('‚ö†Ô∏è') || message.includes('C·∫£nh b√°o')) return '<i class="fas fa-exclamation-circle notification-icon warning"></i>';
            
            if (type === 'success') return '<i class="fas fa-check-circle notification-icon success"></i>';
            if (type === 'danger') return '<i class="fas fa-times-circle notification-icon danger"></i>';
            if (type === 'warning') return '<i class="fas fa-exclamation-circle notification-icon warning"></i>';
