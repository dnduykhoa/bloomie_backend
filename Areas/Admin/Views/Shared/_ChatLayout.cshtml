        }

        // Load notifications
        function loadNotifications() {
            fetch('/api/NotificationApi/GetNotifications?take=20')
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        const notificationList = document.querySelector('.dropdown-menu-notifications');
                        notificationList.innerHTML = '';

                        if (result.data.length === 0) {
                            notificationList.innerHTML = '<li><a class="dropdown-item notification-item" href="#"><span>Ch∆∞a c√≥ th√¥ng b√°o m·ªõi</span></a></li>';
                        } else {
                            result.data.forEach(notif => {
                                const li = document.createElement('li');
                                const icon = getNotificationIcon(notif.type, notif.message);
                                const timeAgo = formatTimeAgo(notif.createdAt);
                                
                                li.innerHTML = `
                                    <div class="dropdown-item notification-item ${notif.isRead ? '' : 'unread'}" data-id="${notif.id}" data-type="${notif.type}">
