                                            <a href="${notif.link || '#'}" onclick="markAsRead(${notif.id})">
                                                <span>${notif.message}</span>
                                                <div class="notification-time">
                                                    <i class="far fa-clock"></i>
                                                    <span>${timeAgo}</span>
                                                </div>
                                            </a>
                                        </div>
                                    </div>`;
                                notificationList.appendChild(li);
                            });

                            const divider = document.createElement('li');
                            divider.className = 'dropdown-divider';
                            notificationList.appendChild(divider);

                            const viewAllLi = document.createElement('li');
                            const viewAllLink = document.createElement('a');
                            viewAllLink.className = 'dropdown-item text-center';
                            viewAllLink.href = '#';
                            viewAllLink.innerHTML = '<strong>Xem t·∫•t c·∫£</strong>';
                            viewAllLink.onclick = openNotificationModal;
                            viewAllLi.appendChild(viewAllLink);
                            notificationList.appendChild(viewAllLi);
                        }

                        const badge = document.getElementById('notificationCount');
                        badge.textContent = result.unreadCount;
                        badge.style.display = result.unreadCount > 0 ? 'inline' : 'none';
                    }
                })
                .catch(err => console.error('L·ªói load th√¥ng b√°o:', err));
        }

        // Mark notification as read
        window.markAsRead = function(notificationId) {
            fetch(`/api/NotificationApi/MarkAsRead/${notificationId}`, { method: 'POST' })
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        const badge = document.getElementById('notificationCount');
                        badge.textContent = result.unreadCount;
                        badge.style.display = result.unreadCount > 0 ? 'inline' : 'none';
                        
                        const item = document.querySelector(`[data-id="${notificationId}"]`);
                        if (item) item.classList.remove('unread');
                    }
                });
        }

        // Connect SignalR for notifications
        async function connectNotificationHub() {
            connection = new signalR.HubConnectionBuilder()
                .withUrl("/notificationHub")
                .withAutomaticReconnect()
                .build();

            connection.on("ReceiveNotification", function (notification) {
                loadNotifications();
            });

            connection.on("NewChatMessage", function (data) {
                console.log("üí¨ Tin nh·∫Øn m·ªõi t·ª´:", data.customerName);
                updateChatBadge(data.unreadCount);
                // Force reload dropdown immediately
                loadRecentMessages();
            });

            try {
                await connection.start();
                console.log('SignalR Connected');
                loadNotifications();
                loadUnreadChatCount();
            } catch (error) {
                console.error('SignalR Connection Error:', error);
            }
        }

        // Open notification modal
        window.openNotificationModal = function(event) {
            event.preventDefault();
            const modal = new bootstrap.Modal(document.getElementById('notificationModal'));
            modal.show();
            loadAllNotificationsForModal();
        }

        // Load all notifications for modal
        function loadAllNotificationsForModal() {
            const modalList = document.getElementById('modalNotificationList');
            modalList.innerHTML = '<div class="text-center py-4"><div class="spinner-border text-primary" role="status"></div></div>';

            fetch('/api/NotificationApi/GetNotifications?take=100')
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        modalList.innerHTML = '';

                        if (result.data.length === 0) {
                            modalList.innerHTML = '<div class="text-center text-muted py-4"><i class="fas fa-bell-slash fa-3x mb-3"></i><p>Ch∆∞a c√≥ th√¥ng b√°o n√†o</p></div>';
                        } else {
                            result.data.forEach(notif => {
                                const div = document.createElement('div');
                                div.className = `notification-item ${notif.isRead ? '' : 'unread'}`;
                                div.setAttribute('data-id', notif.id);
                                div.setAttribute('data-type', notif.type);
                                
                                const icon = getNotificationIcon(notif.type, notif.message);
                                const timeAgo = formatTimeAgo(notif.createdAt);
                                
                                div.innerHTML = `
                                    ${icon}
                                    <div class="notification-content flex-grow-1">
                                        <a href="${notif.link || '#'}" onclick="markAsReadAndClose(${notif.id})" class="text-decoration-none">
                                            <span class="${notif.isRead ? 'text-muted' : 'fw-bold'}">${notif.message}</span>
                                            <div class="notification-time">
                                                <i class="far fa-clock"></i>
                                                <span>${timeAgo}</span>
                                            </div>
                                        </a>
                                    </div>
                                    <div class="ms-3 d-flex gap-1">
                                        ${!notif.isRead ? `<button class="btn btn-sm btn-outline-success" onclick="markAsReadInModal(${notif.id})" title="ƒê√°nh d·∫•u ƒë√£ ƒë·ªçc"><i class="fas fa-check"></i></button>` : ''}
                                        <button class="btn btn-sm btn-outline-danger" onclick="deleteNotificationInModal(${notif.id})" title="X√≥a"><i class="fas fa-trash"></i></button>
                                    </div>
                                `;
                                modalList.appendChild(div);
                            });
                        }
                    }
                })
                .catch(err => {
                    console.error('L·ªói load th√¥ng b√°o:', err);
                    modalList.innerHTML = '<div class="alert alert-danger">L·ªói t·∫£i th√¥ng b√°o. Vui l√≤ng th·ª≠ l·∫°i!</div>';
                });
        }

        // Mark as read and close modal
        window.markAsReadAndClose = function(notificationId) {
            markAsRead(notificationId);
            bootstrap.Modal.getInstance(document.getElementById('notificationModal')).hide();
        }

        // Mark as read in modal
        window.markAsReadInModal = function(notificationId) {
            fetch(`/api/NotificationApi/MarkAsRead/${notificationId}`, { method: 'POST' })
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        loadNotifications();
                        loadAllNotificationsForModal();
                    }
                });
        }

        // Delete notification in modal
        window.deleteNotificationInModal = function(notificationId) {
            if (confirm('B·∫°n c√≥ ch·∫Øc mu·ªën x√≥a th√¥ng b√°o n√†y?')) {
                fetch(`/api/NotificationApi/DeleteNotification/${notificationId}`, { method: 'DELETE' })
                    .then(response => response.json())
                    .then(result => {
                        if (result.success) {
                            loadNotifications();
                            loadAllNotificationsForModal();
                        }
                    });
            }
        }

        // Mark all as read in modal
        window.markAllAsReadModal = function() {
            fetch('/api/NotificationApi/MarkAllAsRead', { method: 'POST' })
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        loadNotifications();
                        loadAllNotificationsForModal();
                    }
                });
        }

        // Delete all read notifications in modal
        window.deleteAllReadModal = function() {
            if (confirm('B·∫°n c√≥ ch·∫Øc mu·ªën x√≥a t·∫•t c·∫£ th√¥ng b√°o ƒë√£ ƒë·ªçc?')) {
                fetch('/api/NotificationApi/DeleteAllRead', { method: 'DELETE' })
                    .then(response => response.json())
                    .then(result => {
                        if (result.success) {
                            loadNotifications();
                            loadAllNotificationsForModal();
                        }
                    });
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadWorkingHours();
            connectNotificationHub();
            
            // Polling fallback
            setInterval(loadUnreadChatCount, 30000);
        });
    </script>

