@using Microsoft.AspNetCore.Identity
@using Bloomie.Data
@using Bloomie.Authorization
@using System.Security.Claims
@inject UserManager<ApplicationUser> UserManager
@model Bloomie.Data.ApplicationUser
@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    
    // Lấy thông tin current user
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var currentUser = await UserManager.FindByIdAsync(currentUserId);
    var currentUserRoles = await UserManager.GetRolesAsync(currentUser);
    var currentUserRole = currentUserRoles.FirstOrDefault() ?? "User";
    
    // Lấy role của user đang xem
    var targetUserRoles = await UserManager.GetRolesAsync(Model);
    var targetUserRole = targetUserRoles.FirstOrDefault() ?? "User";
    
    // Kiểm tra quyền
    bool canManage = PermissionMatrix.UserManagement.CanManage(
        currentUserRole,
        targetUserRole,
        currentUser?.IsSuperAdmin ?? false,
        Model.IsSuperAdmin
    );
    
    bool canDelete = PermissionMatrix.UserManagement.CanDelete(
        currentUserRole,
        targetUserRole,
        currentUser?.IsSuperAdmin ?? false,
        Model.IsSuperAdmin
    );
    
    bool canLock = PermissionMatrix.UserManagement.CanLockUnlock(
        currentUserRole,
        targetUserRole,
        currentUser?.IsSuperAdmin ?? false,
        Model.IsSuperAdmin
    );
}

<div class="container-fluid mt-2 p-0">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-dark">
                    <i class="fas fa-user-circle text-primary me-2"></i>Chi tiết người dùng
                    @if (Model.IsSuperAdmin)
                    {
                        <span class="badge bg-danger ms-2" style="font-size: 0.9rem; vertical-align: middle;">
                            <i class="fas fa-crown"></i> SUPER ADMIN
                        </span>
                    }
                    else if (targetUserRole == "Admin")
                    {
                        <span class="badge bg-primary ms-2" style="font-size: 0.9rem; vertical-align: middle;">
                            <i class="fas fa-user-shield"></i> ADMIN
                        </span>
                    }
                </h2>
            </div>

            @if (!canManage)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Lưu ý:</strong> Bạn không có quyền quản lý người dùng này. Chỉ có thể xem thông tin.
                </div>
            }

            <!-- Success/Error Messages -->
            @if (TempData["success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row">
                <!-- Left Column -->
                <div class="col-lg-6">
                    <!-- Card: Thông tin cơ bản -->
                    <div class="card mb-3 info-card">
                        <div class="card-header fw-bold">
                            <i class="fas fa-info-circle text-primary me-2"></i>Thông tin cơ bản
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0 info-list">
                                <dt class="col-sm-4">
                                    <i class="fas fa-user text-primary me-2"></i>Tên đăng nhập
                                </dt>
                                <dd class="col-sm-8">@Model.UserName</dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-id-card text-primary me-2"></i>Họ tên
                                </dt>
                                <dd class="col-sm-8">@Model.FullName</dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-envelope text-primary me-2"></i>Email
                                </dt>
                                <dd class="col-sm-8">
                                    @Model.Email
                                    @if (ViewBag.EmailConfirmed != null)
                                    {
                                        @if (ViewBag.EmailConfirmed)
                                        {
                                            <span class="badge bg-success ms-2">
                                                <i class="fas fa-check-circle"></i> Đã xác thực
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark ms-2">
                                                <i class="fas fa-exclamation-triangle"></i> Chưa xác thực
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không xác định</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-phone text-primary me-2"></i>Số điện thoại
                                </dt>
                                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Chưa cập nhật" : Model.PhoneNumber)</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Card: Trạng thái tài khoản -->
                    <div class="card mb-3 status-card">
                        <div class="card-header fw-bold">
                            <i class="fas fa-shield-alt text-primary me-2"></i>Trạng thái tài khoản
                        </div>
                        <div class="card-body">
                            @if (Model.LockoutEnd != null && Model.LockoutEnd > DateTime.UtcNow)
                            {
                                <div class="status-badge-container">
                                    @if (Model.LockoutEnd == DateTimeOffset.MaxValue)
                                    {
                                        <div class="status-badge status-locked-permanent">
                                            <i class="fas fa-ban fa-2x mb-2"></i>
                                            <div class="status-text">Khóa vĩnh viễn</div>
                                        </div>
                                    }
                                    else
                                    {
                                        var timeLeft = Model.LockoutEnd.Value - DateTime.UtcNow;
                                        <div class="status-badge status-locked-temp">
                                            <i class="fas fa-clock fa-2x mb-2"></i>
                                            <div class="status-text">Đã khóa</div>
                                            <div class="status-detail">
                                                <strong>Khóa đến:</strong> @Model.LockoutEnd.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                            </div>
                                            <div class="status-time-left">
                                                <strong>Còn lại:</strong> 
                                                @if (timeLeft.TotalDays >= 1)
                                                {
                                                    @($"{(int)timeLeft.TotalDays} ngày {timeLeft.Hours} giờ")
                                                }
                                                else if (timeLeft.TotalHours >= 1)
                                                {
                                                    @($"{timeLeft.Hours} giờ {timeLeft.Minutes} phút")
                                                }
                                                else
                                                {
                                                    @($"{timeLeft.Minutes} phút")
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="status-badge-container">
                                    <div class="status-badge status-active">
                                        <i class="fas fa-check-circle fa-2x mb-2"></i>
                                        <div class="status-text">Hoạt động</div>
                                        <small class="text-muted">Tài khoản đang hoạt động bình thường</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Card: Đặt lại mật khẩu -->
                    <div class="card mb-3">
                        <div class="card-header fw-bold">
                            <i class="fas fa-key text-primary me-2"></i>Đặt lại mật khẩu
                        </div>
                        <div class="card-body">
                            <form asp-action="ResetPassword" method="post" class="d-inline"
                                onsubmit="return confirm('Đặt lại mật khẩu cho @Model.UserName? Mật khẩu tạm thời sẽ được gửi qua email.')">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-envelope me-2"></i>Gửi mật khẩu tạm thời qua email
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="col-lg-6">
                    <!-- Card: Quản lý khóa -->
                    <div class="card mb-3">
                        <div class="card-header fw-bold">
                            <i class="fas fa-lock text-primary me-2"></i>Quản lý khóa tài khoản
                        </div>
                        <div class="card-body">
                            @if (Model.LockoutEnd == null || Model.LockoutEnd < DateTime.UtcNow)
                            {
                                <!-- Khóa có thời hạn -->
                                <h6 class="mb-3">Khóa có thời hạn</h6>
                                <form asp-action="Lock" asp-route-id="@Model.Id" method="post" class="mb-3"
                                onsubmit="return confirm('Bạn có chắc muốn khóa tài khoản này?')">
                                    <div class="input-group" style="max-width: 350px;">
                                        <input type="number" name="amount" min="1" value="30" class="form-control" placeholder="Số lượng" />
                                        <select name="unit" class="form-select">
                                            <option value="minutes">phút</option>
                                            <option value="hours">giờ</option>
                                            <option value="days" selected>ngày</option>
                                        </select>
                                        <button type="submit" class="btn btn-warning" title="Khóa có thời hạn">
                                            <i class="fas fa-lock"></i> Khóa
                                        </button>
                                    </div>
                                </form>
                                
                                <hr />
                                
                                <!-- Khóa vĩnh viễn -->
                                <h6 class="mb-3">Khóa vĩnh viễn</h6>
                                <form asp-action="BanUser" asp-route-id="@Model.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger" title="Khóa vĩnh viễn" 
                                            onclick="return confirm('Bạn có chắc muốn khóa vĩnh viễn tài khoản này?')">
                                        <i class="fas fa-ban"></i> Khóa vĩnh viễn
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="Unlock" asp-route-id="@Model.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-success" title="Mở khóa">
                                        <i class="fas fa-unlock"></i> Mở khóa tài khoản
                                    </button>
                                </form>
                            }
                        </div>
                    </div>

                    <!-- Card: Thao tác nhanh -->
                    <div class="card mb-3">
                        <div class="card-header fw-bold">
                            <i class="fas fa-cog text-primary me-2"></i>Thao tác nhanh
                        </div>
                        <div class="card-body p-3">
                            <a asp-action="Update" asp-route-id="@Model.Id" class="action-btn action-btn-warning mb-2">
                                <div class="d-flex align-items-center">
                                    <div class="action-icon">
                                        <i class="fas fa-edit"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">Sửa thông tin</h6>
                                        <small class="text-muted">Cập nhật thông tin người dùng</small>
                                    </div>
                                    <i class="fas fa-chevron-right text-muted"></i>
                                </div>
                            </a>
                            
                            <a asp-action="GiftVoucher" asp-route-userId="@Model.Id" class="action-btn action-btn-success mb-2">
                                <div class="d-flex align-items-center">
                                    <div class="action-icon">
                                        <i class="fas fa-gift"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">Tặng Voucher</h6>
                                        <small class="text-muted">Gửi mã khuyến mãi cho người dùng</small>
                                    </div>
                                    <i class="fas fa-chevron-right text-muted"></i>
                                </div>
                            </a>
                            
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="action-btn action-btn-danger">
                                <div class="d-flex align-items-center">
                                    <div class="action-icon">
                                        <i class="fas fa-trash"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">Xóa tài khoản</h6>
                                        <small class="text-muted">Xóa vĩnh viễn người dùng này</small>
                                    </div>
                                    <i class="fas fa-chevron-right text-muted"></i>
                                </div>
                            </a>
                        </div>
                    </div>

                    <!-- Card: Lịch sử hoạt động -->
                    <div class="card mb-3">
                        <div class="card-header fw-bold">
                            <i class="fas fa-history text-primary me-2"></i>Lịch sử hoạt động
                        </div>
                        <div class="card-body">
                            <a asp-action="UserActivity" asp-route-id="@Model.Id" class="activity-btn mb-2">
                                <div class="d-flex align-items-center">
                                    <div class="activity-icon bg-info">
                                        <i class="fas fa-chart-line"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">Tổng hợp hoạt động</h6>
                                        <small class="text-muted">Xem báo cáo tổng quan</small>
                                    </div>
                                    <i class="fas fa-chevron-right text-muted"></i>
                                </div>
                            </a>
                            
                            <a asp-action="LoginHistory" asp-route-id="@Model.Id" class="activity-btn mb-2">
                                <div class="d-flex align-items-center">
                                    <div class="activity-icon bg-success">
                                        <i class="fas fa-sign-in-alt"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">Lịch sử đăng nhập</h6>
                                        <small class="text-muted">Theo dõi các lần đăng nhập</small>
                                    </div>
                                    <i class="fas fa-chevron-right text-muted"></i>
                                </div>
                            </a>
                            
                            <a asp-action="AccessHistory" asp-route-id="@Model.Id" class="activity-btn">
                                <div class="d-flex align-items-center">
                                    <div class="activity-icon bg-warning">
                                        <i class="fas fa-eye"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">Lịch sử truy cập</h6>
                                        <small class="text-muted">Xem các trang đã truy cập</small>
                                    </div>
                                    <i class="fas fa-chevron-right text-muted"></i>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                </a>
            </div>
        </div>
    </div>
</div>

