@{
    ViewData["Title"] = "Xuất dữ liệu Excel";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-download"></i> Xuất dữ liệu Excel
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Export Users -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h4 class="card-title">Xuất danh sách người dùng</h4>
                                </div>
                            <div class="card-body">
                                    <form asp-action="ExportUsers" method="post">
                                        <div class="form-group">
                                            <label>Từ ngày:</label>
                                            <input type="date" name="DateFrom" class="form-control" value="@ViewBag.DefaultDateFrom" />
                                        </div>
                                        <div class="form-group">
                                            <label>Đến ngày:</label>
                                            <input type="date" name="DateTo" class="form-control" value="@ViewBag.DefaultDateTo" />
                                        </div>
                                        <div class="form-check">
                                            <input type="checkbox" name="IncludeDeleted" class="form-check-input" id="includeDeleted" />
                                            <label class="form-check-label" for="includeDeleted">
                                                Bao gồm tài khoản đã xóa
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input type="checkbox" name="IncludeRoles" class="form-check-input" id="includeRoles" checked />
                                            <label class="form-check-label" for="includeRoles">
                                                Bao gồm thông tin vai trò
                                            </label>
                                        </div>
                                        <button type="submit" class="btn btn-success mt-3">
                                            <i class="fas fa-download"></i> Xuất danh sách người dùng
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card card-info">
                                <div class="card-header">
                                    <h4 class="card-title">Xuất lịch sử đăng nhập</h4>
                                </div>
                                <div class="card-body">
                                    <form asp-action="ExportLoginHistory" method="post">
                                        <div class="form-group">
                                            <label>Từ ngày:</label>
                                            <input type="date" name="DateFrom" class="form-control" value="@ViewBag.DefaultDateFrom" />
                                        </div>
                                        <div class="form-group">
                                            <label>Đến ngày:</label>
                                            <input type="date" name="DateTo" class="form-control" value="@ViewBag.DefaultDateTo" />
                                        </div>
                                        <div class="form-group">
                                            <label>User ID (tùy chọn):</label>
                                            <input type="text" name="UserId" class="form-control" placeholder="Để trống để xuất tất cả" />
                                        </div>
                                        <button type="submit" class="btn btn-info mt-3">
                                            <i class="fas fa-download"></i> Xuất lịch sử đăng nhập
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>