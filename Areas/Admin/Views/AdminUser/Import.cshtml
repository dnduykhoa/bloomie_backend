            submitBtn.disabled = true;
            fileUploadArea.style.borderColor = 'var(--danger-color)';
            return;
        }
        
        // Show file info with animation
        document.getElementById('fileName').textContent = file.name;
        document.getElementById('fileSize').textContent = (file.size / 1024).toFixed(2) + ' KB';
        fileInfo.style.display = 'block';
        fileInfo.style.animation = 'slideIn 0.3s ease';
        
        // Enable submit button
        submitBtn.disabled = false;
        submitBtn.style.animation = 'pulse 0.5s ease';
        
        // Update upload area style
        fileUploadArea.style.borderColor = 'var(--success-color)';
        fileUploadArea.style.background = '#d1fae5';
    } else {
        fileInfo.style.display = 'none';
        submitBtn.disabled = true;
        fileUploadArea.style.borderColor = 'var(--border-color)';
        fileUploadArea.style.background = 'var(--background-light)';
    }
});

// Drag and drop support
fileUploadArea.addEventListener('dragover', (e) => {
