@model IEnumerable<Bloomie.Models.Entities.PointReward>
@{
    ViewData["Title"] = "Quản lý Point Shop";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-gift"></i> Quản lý Point Shop - Quà đổi điểm</h2>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
            <a asp-action="CreatePointReward" class="btn btn-primary">
                <i class="fas fa-plus"></i> Thêm phần quà mới
            </a>
        </div>
    </div>

    @if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 5%;">STT</th>
                                <th style="width: 10%;">Ảnh</th>
                                <th style="width: 20%;">Tên phần quà</th>
                                <th style="width: 15%;">Loại</th>
                                <th style="width: 10%;">Điểm cần</th>
                                <th style="width: 10%;">Mã giảm giá</th>
                                <th style="width: 8%;">Tồn kho</th>
                                <th style="width: 8%;">HSD (ngày)</th>
                                <th style="width: 8%;">Trạng thái</th>
                                <th style="width: 10%;">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int stt = 1; }
                            @foreach (var reward in Model)
                            {
                                <tr>
                                    <td>@stt</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(reward.ImageUrl))
                                        {
                                            <img src="@reward.ImageUrl" alt="@reward.Name" 
                                                 class="img-thumbnail" style="max-width: 80px; max-height: 80px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="text-center text-muted">
                                                <i class="fas fa-image fa-2x"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <strong>@reward.Name</strong>
                                        @if (!string.IsNullOrEmpty(reward.Description))
                                        {
                                            <br><small class="text-muted">@reward.Description</small>
                                        }
                                    </td>
                                    <td>
                                        @if (reward.PromotionCode?.Promotion != null)
                                        {
                                            switch (reward.PromotionCode.Promotion.Type)
                                            {
                                                case Bloomie.Models.Entities.PromotionType.Order:
                                                    <span class="badge bg-primary"><i class="fas fa-shopping-cart"></i> Giảm giá đơn hàng</span>
                                                    break;
                                                case Bloomie.Models.Entities.PromotionType.Product:
                                                    <span class="badge bg-info"><i class="fas fa-tag"></i> Giảm giá sản phẩm</span>
                                                    break;
                                                case Bloomie.Models.Entities.PromotionType.Shipping:
                                                    <span class="badge bg-success"><i class="fas fa-shipping-fast"></i> Miễn phí ship</span>
                                                    break;
                                                case Bloomie.Models.Entities.PromotionType.Gift:
                                                    <span class="badge bg-warning"><i class="fas fa-gift"></i> Mua X tặng Y</span>
                                                    break;
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary"><i class="fas fa-question"></i> Chưa xác định</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <strong class="text-primary">@reward.PointsCost</strong> điểm
                                    </td>
                                    <td>
                                        @if (reward.PromotionCode != null)
                                        {
                                            <span class="badge bg-info">@reward.PromotionCode.Code</span>
                                            <br>
                                            @if (reward.PromotionCode.IsPercent)
                                            {
                                                <small>Giảm @reward.PromotionCode.Value%</small>
                                            }
                                            else
                                            {
                                                <small>Giảm @string.Format("{0:N0}", reward.PromotionCode.Value)₫</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (reward.Stock.HasValue)
                                        {
                                            if (reward.Stock.Value <= 0)
                                            {
                                                <span class="badge bg-danger">Hết hàng</span>
                                            }
                                            else if (reward.Stock.Value <= 5)
                                            {
                                                <span class="badge bg-warning">@reward.Stock.Value</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">@reward.Stock.Value</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Không giới hạn</span>
                                        }
                                    </td>
                                    <td class="text-center">@reward.ValidDays</td>
                                    <td class="text-center">
                                        @if (reward.IsActive)
                                        {
                                            <span class="badge bg-success"><i class="fas fa-check"></i> Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary"><i class="fas fa-times"></i> Tắt</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group-vertical btn-group-sm" role="group">
                                            <a asp-action="EditPointReward" asp-route-id="@reward.Id" 
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Sửa
                                            </a>
                                            
                                            <form asp-action="TogglePointRewardActive" asp-route-id="@reward.Id" 
                                                  method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm @(reward.IsActive ? "btn-secondary" : "btn-success") w-100">
                                                    <i class="fas fa-@(reward.IsActive ? "eye-slash" : "eye")"></i> 
                                                    @(reward.IsActive ? "Tắt" : "Bật")
                                                </button>
                                            </form>
                                            
                                            <form asp-action="DeletePointReward" asp-route-id="@reward.Id" 
                                                  method="post" class="d-inline"
                                                  onsubmit="return confirm('Bạn có chắc muốn xóa phần quà này?')">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger btn-sm w-100">
                                                    <i class="fas fa-trash"></i> Xóa
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                stt++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-gift fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">Chưa có phần quà nào</h5>
                    <p class="text-muted">Hãy thêm phần quà đầu tiên để user có thể đổi điểm!</p>
                    <a asp-action="CreatePointReward" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm phần quà mới
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> <strong>Lưu ý:</strong>
            <ul class="mb-0 mt-2">
                <li>User sẽ dùng điểm tích lũy từ điểm danh để đổi các phần quà này</li>
                <li>Nếu chọn loại Voucher, cần liên kết với một Promotion Code</li>
                <li>Voucher sau khi đổi sẽ được thêm vào ví của user với hạn sử dụng = ValidDays</li>
                <li>Không thể xóa phần quà đã có người đổi</li>
            </ul>
        </div>
    </div>
</div>

<style>
    .table td {
        vertical-align: middle;
    }
    .btn-group-vertical .btn {
        margin-bottom: 2px;
    }
</style>
